<%= form_with(model: writing_goal, local: true, class: 'space-y-8') do |f| %>

  <!-- Error Messages -->
  <% if writing_goal.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 dark:bg-red-900 dark:bg-opacity-20 dark:border-red-900">
      <div class="flex items-start">
        <i class="material-icons text-red-400 mr-3 mt-0.5">error</i>
        <div>
          <h3 class="text-sm font-medium text-red-800 mb-2 dark:text-red-200">
            <%= pluralize(writing_goal.errors.count, "error") %> prevented this goal from being saved:
          </h3>
          <ul class="text-sm text-red-700 space-y-1 dark:text-red-300">
            <% writing_goal.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Goal Details Card -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden dark:bg-gray-800 dark:border-gray-700">
    <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-green-50 to-emerald-50 dark:border-gray-700 dark:from-gray-700 dark:to-gray-700">
      <div class="flex items-center">
        <div class="p-2 bg-green-100 rounded-lg mr-3 dark:bg-green-900">
          <i class="material-icons text-green-600 dark:text-green-400">flag</i>
        </div>
        <div>
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Goal Details</h2>
          <p class="text-sm text-gray-600 dark:text-gray-400">Set up your writing challenge</p>
        </div>
      </div>
    </div>

    <div class="p-6 space-y-6">
      <!-- Title -->
      <div>
        <%= f.label :title, class: 'block text-sm font-medium text-gray-900 mb-2 dark:text-gray-200' %>
        <%= f.text_field :title,
            placeholder: 'My NaNoWriMo Challenge',
            class: 'block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 text-sm dark:bg-gray-700 dark:border-gray-600 dark:text-white',
            required: true %>
      </div>

      <!-- Target Word Count -->
      <div>
        <%= f.label :target_word_count, class: 'block text-sm font-medium text-gray-900 mb-2 dark:text-gray-200' %>
        <%= f.number_field :target_word_count,
            id: 'writing_goal_target_word_count',
            placeholder: '50000',
            min: 1,
            class: 'block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 text-sm dark:bg-gray-700 dark:border-gray-600 dark:text-white',
            required: true %>
        <p class="mt-1 text-xs text-gray-500">NaNoWriMo standard is 50,000 words</p>
      </div>

      <!-- Date Range -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <%= f.label :start_date, class: 'block text-sm font-medium text-gray-900 mb-2 dark:text-gray-200' %>
          <%= f.date_field :start_date,
              id: 'writing_goal_start_date',
              class: 'block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 text-sm dark:bg-gray-700 dark:border-gray-600 dark:text-white',
              required: true %>
        </div>
        <div>
          <%= f.label :end_date, class: 'block text-sm font-medium text-gray-900 mb-2 dark:text-gray-200' %>
          <%= f.date_field :end_date,
              id: 'writing_goal_end_date',
              class: 'block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 text-sm dark:bg-gray-700 dark:border-gray-600 dark:text-white',
              required: true %>
        </div>
      </div>

      <!-- Quick Presets -->
      <div>
        <label class="block text-sm font-medium text-gray-900 mb-2 dark:text-gray-200">Quick Presets</label>
        <div class="flex flex-wrap gap-2">
          <button type="button" onclick="setPreset(50000, 30)" class="px-3 py-1 text-xs font-medium bg-green-100 text-green-700 rounded-full hover:bg-green-200 dark:bg-green-900 dark:text-green-300">
            NaNoWriMo (50k/30 days)
          </button>
          <button type="button" onclick="setPreset(10000, 7)" class="px-3 py-1 text-xs font-medium bg-blue-100 text-blue-700 rounded-full hover:bg-blue-200 dark:bg-blue-900 dark:text-blue-300">
            Week Sprint (10k/7 days)
          </button>
          <button type="button" onclick="setPreset(25000, 14)" class="px-3 py-1 text-xs font-medium bg-purple-100 text-purple-700 rounded-full hover:bg-purple-200 dark:bg-purple-900 dark:text-purple-300">
            Two Week (25k/14 days)
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Daily Goal Preview -->
  <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 border border-gray-200 dark:border-gray-700">
    <div class="flex items-center justify-between">
      <span class="text-sm text-gray-600 dark:text-gray-400">Daily goal to complete on time:</span>
      <div class="flex items-center space-x-2">
        <span id="daily-goal-preview" class="text-lg font-bold text-green-600 dark:text-green-400">
          --
        </span>
        <span class="text-sm text-gray-500 dark:text-gray-400">words/day</span>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex items-center justify-between">
    <%= link_to writing_goals_path, class: "px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:text-gray-200 dark:hover:bg-gray-700" do %>
      Cancel
    <% end %>

    <%= f.submit writing_goal.persisted? ? 'Update Goal' : 'Create Goal',
        class: "px-6 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors cursor-pointer" %>
  </div>
<% end %>

<script>
function setPreset(words, days) {
  document.getElementById('writing_goal_target_word_count').value = words;

  const today = new Date();
  const endDate = new Date(today);
  endDate.setDate(endDate.getDate() + days);

  document.getElementById('writing_goal_start_date').value = today.toISOString().split('T')[0];
  document.getElementById('writing_goal_end_date').value = endDate.toISOString().split('T')[0];

  updateDailyGoalPreview();
}

function updateDailyGoalPreview() {
  const wordCountEl = document.getElementById('writing_goal_target_word_count');
  const startDateEl = document.getElementById('writing_goal_start_date');
  const endDateEl = document.getElementById('writing_goal_end_date');
  const previewEl = document.getElementById('daily-goal-preview');

  if (!wordCountEl || !startDateEl || !endDateEl || !previewEl) return;

  const targetWords = parseInt(wordCountEl.value) || 0;
  const startDate = new Date(startDateEl.value);
  const endDate = new Date(endDateEl.value);

  if (targetWords > 0 && !isNaN(startDate) && !isNaN(endDate)) {
    const days = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24));
    if (days > 0) {
      const dailyGoal = Math.ceil(targetWords / days);
      previewEl.textContent = dailyGoal.toLocaleString();
    } else {
      previewEl.textContent = '--';
    }
  } else {
    previewEl.textContent = '--';
  }
}

document.addEventListener('DOMContentLoaded', function() {
  const wordCountField = document.getElementById('writing_goal_target_word_count');
  const startDateField = document.getElementById('writing_goal_start_date');
  const endDateField = document.getElementById('writing_goal_end_date');

  if (wordCountField) wordCountField.addEventListener('input', updateDailyGoalPreview);
  if (startDateField) startDateField.addEventListener('change', updateDailyGoalPreview);
  if (endDateField) endDateField.addEventListener('change', updateDailyGoalPreview);

  // Initial calculation
  updateDailyGoalPreview();
});
</script>
