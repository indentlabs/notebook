<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <%= link_to writing_goals_path, class: 'inline-flex items-center text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-200' do %>
        <i class="material-icons mr-1">arrow_back</i>
        Back to Goals
      <% end %>
    </div>

    <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-6"><%= @page_title %></h1>

    <%= render 'form', writing_goal: @writing_goal %>

    <!-- Delete Goal -->
    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
      <%= button_to writing_goal_path(@writing_goal),
          method: :delete,
          data: { confirm: 'Are you sure you want to delete this goal? This cannot be undone.' },
          class: "inline-flex items-center px-4 py-2 text-red-600 hover:text-red-700 dark:text-red-400" do %>
        <i class="material-icons mr-2 text-sm">delete</i>
        Delete Goal
      <% end %>
    </div>
  </div>
</div>
