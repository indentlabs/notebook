<!-- Main Progress Card -->
<div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden mb-6">
  <!-- Goal Header with Progress -->
  <div class="bg-gradient-to-r from-green-500 to-emerald-600 p-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
      <div class="mb-4 md:mb-0">
        <h2 class="text-xl font-bold text-white"><%= goal.title %></h2>
        <p class="text-green-100 text-sm mt-1">
          <%= goal.start_date.strftime('%B %d') %> - <%= goal.end_date.strftime('%B %d, %Y') %>
        </p>
      </div>
      <div class="text-left md:text-right">
        <div class="text-3xl font-bold text-white"><%= number_with_delimiter(goal.words_written_during_goal) %></div>
        <div class="text-green-100 text-sm">of <%= number_with_delimiter(goal.target_word_count) %> words</div>
      </div>
    </div>

    <!-- Large Progress Bar -->
    <div class="mt-6">
      <div class="w-full bg-green-900 bg-opacity-30 rounded-full h-4">
        <div class="bg-white h-4 rounded-full transition-all duration-500"
             style="width: <%= goal.progress_percentage %>%"></div>
      </div>
      <div class="flex justify-between text-xs text-green-100 mt-2">
        <span><%= goal.progress_percentage.round(1) %>% complete</span>
        <span><%= number_with_delimiter(goal.words_remaining) %> words remaining</span>
      </div>
    </div>
  </div>

  <!-- Stats Grid -->
  <div class="p-6 grid grid-cols-2 md:grid-cols-4 gap-4">
    <!-- Daily Goal -->
    <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 text-center">
      <i class="material-icons text-green-500 mb-2">flag</i>
      <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= number_with_delimiter(goal.daily_goal) %></div>
      <div class="text-xs text-gray-500 dark:text-gray-400">Daily Goal</div>
      <div class="text-xs text-gray-400 dark:text-gray-500 mt-1">to finish on time</div>
    </div>

    <!-- Original Daily Goal -->
    <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 text-center">
      <i class="material-icons text-blue-500 mb-2">track_changes</i>
      <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= number_with_delimiter(goal.original_daily_goal) %></div>
      <div class="text-xs text-gray-500 dark:text-gray-400">Original Pace</div>
      <div class="text-xs text-gray-400 dark:text-gray-500 mt-1">words/day</div>
    </div>

    <!-- Days Remaining -->
    <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 text-center">
      <i class="material-icons text-orange-500 mb-2">schedule</i>
      <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= goal.days_remaining %></div>
      <div class="text-xs text-gray-500 dark:text-gray-400">Days Left</div>
      <div class="text-xs text-gray-400 dark:text-gray-500 mt-1">of <%= goal.total_days %> total</div>
    </div>

    <!-- Ahead/Behind Pace -->
    <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 text-center">
      <i class="material-icons <%= goal.ahead_or_behind >= 0 ? 'text-green-500' : 'text-red-500' %> mb-2">
        <%= goal.ahead_or_behind >= 0 ? 'trending_up' : 'trending_down' %>
      </i>
      <div class="text-2xl font-bold <%= goal.ahead_or_behind >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
        <%= goal.ahead_or_behind >= 0 ? '+' : '' %><%= number_with_delimiter(goal.ahead_or_behind) %>
      </div>
      <div class="text-xs text-gray-500 dark:text-gray-400">
        <%= goal.ahead_or_behind >= 0 ? 'Ahead of pace' : 'Behind pace' %>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="px-6 pb-6 flex flex-wrap gap-3">
    <%= link_to edit_writing_goal_path(goal), class: "inline-flex items-center px-4 py-2 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-200 font-medium rounded-lg transition-colors" do %>
      <i class="material-icons mr-2 text-sm">edit</i>
      Edit
    <% end %>

    <%= button_to complete_writing_goal_path(goal), method: :post, class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" do %>
      <i class="material-icons mr-2 text-sm">check_circle</i>
      Complete
    <% end %>

    <%= button_to archive_writing_goal_path(goal), method: :post, class: "inline-flex items-center px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white font-medium rounded-lg transition-colors" do %>
      <i class="material-icons mr-2 text-sm">archive</i>
      Archive
    <% end %>
  </div>
</div>
