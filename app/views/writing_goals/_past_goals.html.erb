<div class="mt-12">
  <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
    <i class="material-icons mr-2 text-gray-500">history</i>
    Past Goals
  </h2>

  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
    <ul class="divide-y divide-gray-200 dark:divide-gray-700">
      <% goals.each do |goal| %>
        <li class="p-4 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <div class="flex-1">
              <h3 class="font-medium text-gray-900 dark:text-white"><%= goal.title %></h3>
              <div class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                <%= goal.start_date.strftime('%b %d') %> - <%= goal.end_date.strftime('%b %d, %Y') %>
              </div>
            </div>
            <div class="text-left sm:text-right">
              <% words_written = goal.words_written_during_goal %>
              <div class="text-sm font-medium <%= goal.completed? ? 'text-green-600 dark:text-green-400' : 'text-gray-600 dark:text-gray-400' %>">
                <%= number_with_delimiter(words_written) %> / <%= number_with_delimiter(goal.target_word_count) %> words
              </div>
              <div class="text-xs text-gray-500 dark:text-gray-400 flex items-center sm:justify-end">
                <%= goal.progress_percentage.round(1) %>% complete
                <% if goal.completed? %>
                  <i class="material-icons text-green-500 text-xs ml-1">check_circle</i>
                <% end %>
              </div>
            </div>
            <div class="flex space-x-2">
              <%= button_to activate_writing_goal_path(goal), method: :post, class: "p-2 text-gray-400 hover:text-green-600 dark:hover:text-green-400", title: "Reactivate" do %>
                <i class="material-icons text-sm">play_arrow</i>
              <% end %>
              <%= link_to edit_writing_goal_path(goal), class: "p-2 text-gray-400 hover:text-blue-600 dark:hover:text-blue-400", title: "Edit" do %>
                <i class="material-icons text-sm">edit</i>
              <% end %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
