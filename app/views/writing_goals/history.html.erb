<script>
function deleteWritingGoal(goalTitle, deletePath) {
  const confirmed = confirm(`Are you sure you want to delete "${goalTitle}"?\n\nThis cannot be undone.`);

  if (confirmed) {
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = deletePath;

    const csrfToken = document.querySelector('meta[name="csrf-token"]').content;
    const csrfInput = document.createElement('input');
    csrfInput.type = 'hidden';
    csrfInput.name = 'authenticity_token';
    csrfInput.value = csrfToken;
    form.appendChild(csrfInput);

    const methodInput = document.createElement('input');
    methodInput.type = 'hidden';
    methodInput.name = '_method';
    methodInput.value = 'delete';
    form.appendChild(methodInput);

    document.body.appendChild(form);
    form.submit();
  }
}
</script>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">

  <!-- Page Header -->
  <div class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center">
            <i class="material-icons mr-3 text-gray-500 dark:text-gray-400">history</i>
            Goals History
          </h1>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Your archived and completed writing goals</p>
        </div>
        <%= link_to writing_goals_path, class: "inline-flex items-center px-4 py-2 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-200 font-medium rounded-lg transition-colors" do %>
          <i class="material-icons mr-2 text-sm">arrow_back</i>
          Back to Active Goals
        <% end %>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if @archived_goals.any? %>
      <div class="space-y-4">
        <% @archived_goals.each do |goal| %>
          <% if goal.completed? %>
            <!-- Completed Goal - Celebratory Style -->
            <div class="bg-gradient-to-r from-green-50 to-emerald-50 dark:from-green-900 dark:to-emerald-900 rounded-xl shadow-sm border-2 border-green-300 dark:border-green-600 overflow-hidden">
              <div class="p-6">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                  <div class="flex-1">
                    <div class="flex items-center gap-3">
                      <i class="material-icons text-2xl text-yellow-500">emoji_events</i>
                      <h3 class="text-lg font-semibold text-gray-900 dark:text-white"><%= goal.title %></h3>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-500 text-white">
                        <i class="material-icons text-xs mr-1">check_circle</i>
                        Completed
                      </span>
                    </div>
                    <p class="text-sm text-gray-600 dark:text-gray-300 mt-1 ml-9">
                      <%= goal.start_date.strftime('%B %d') %> - <%= goal.end_date.strftime('%B %d, %Y') %>
                    </p>
                  </div>

                  <div class="mt-4 md:mt-0 md:ml-6 flex flex-col md:items-end">
                    <div class="text-lg font-bold text-green-700 dark:text-green-300">
                      <%= number_with_delimiter(goal.words_written_during_goal) %> / <%= number_with_delimiter(goal.target_word_count) %> words
                    </div>
                    <div class="text-sm font-medium text-green-600 dark:text-green-400">
                      <%= goal.progress_percentage.round(1) %>% complete
                    </div>
                  </div>
                </div>

                <!-- Progress Bar -->
                <div class="mt-4">
                  <div class="w-full bg-green-200 dark:bg-green-800 rounded-full h-3">
                    <div class="bg-gradient-to-r from-green-500 to-emerald-500 h-3 rounded-full transition-all duration-500"
                         style="width: <%= goal.progress_percentage %>%"></div>
                  </div>
                </div>

                <!-- Actions -->
                <div class="mt-4 flex flex-wrap gap-3">
                  <button onclick="deleteWritingGoal('<%= j goal.title %>', '<%= writing_goal_path(goal) %>')"
                          class="inline-flex items-center px-3 py-1.5 bg-red-100 dark:bg-red-900 hover:bg-red-200 dark:hover:bg-red-800 text-red-700 dark:text-red-200 text-sm font-medium rounded-lg transition-colors">
                    <i class="material-icons mr-1.5 text-sm">delete</i>
                    Delete
                  </button>
                </div>
              </div>
            </div>
          <% else %>
            <!-- Archived Goal - Muted Style -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
              <div class="p-6">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                  <div class="flex-1">
                    <div class="flex items-center gap-3">
                      <h3 class="text-lg font-semibold text-gray-900 dark:text-white"><%= goal.title %></h3>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300">
                        <i class="material-icons text-xs mr-1">archive</i>
                        Archived
                      </span>
                    </div>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                      <%= goal.start_date.strftime('%B %d') %> - <%= goal.end_date.strftime('%B %d, %Y') %>
                    </p>
                  </div>

                  <div class="mt-4 md:mt-0 md:ml-6 flex flex-col md:items-end">
                    <div class="text-lg font-semibold text-gray-900 dark:text-white">
                      <%= number_with_delimiter(goal.words_written_during_goal) %> / <%= number_with_delimiter(goal.target_word_count) %> words
                    </div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                      <%= goal.progress_percentage.round(1) %>% complete
                    </div>
                  </div>
                </div>

                <!-- Progress Bar -->
                <div class="mt-4">
                  <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                    <div class="bg-gray-400 h-2 rounded-full transition-all duration-500"
                         style="width: <%= goal.progress_percentage %>%"></div>
                  </div>
                </div>

                <!-- Actions -->
                <div class="mt-4 flex flex-wrap gap-3">
                  <button onclick="deleteWritingGoal('<%= j goal.title %>', '<%= writing_goal_path(goal) %>')"
                          class="inline-flex items-center px-3 py-1.5 bg-red-100 dark:bg-red-900 hover:bg-red-200 dark:hover:bg-red-800 text-red-700 dark:text-red-200 text-sm font-medium rounded-lg transition-colors">
                    <i class="material-icons mr-1.5 text-sm">delete</i>
                    Delete
                  </button>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <i class="material-icons text-6xl text-gray-300 dark:text-gray-600 mb-4">inventory_2</i>
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No archived goals</h3>
        <p class="text-gray-500 dark:text-gray-400 mb-6">Goals you archive will appear here.</p>
        <%= link_to writing_goals_path, class: "inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors" do %>
          <i class="material-icons mr-2 text-sm">arrow_back</i>
          Back to Active Goals
        <% end %>
      </div>
    <% end %>
  </div>
</div>
