<div class="min-h-screen bg-gray-50">
  <!-- Timeline Header - Clean Application Style -->
  <header class="bg-white border-b border-gray-200 shadow-sm">
    <div class="px-6 py-4">
      <!-- Header Content -->
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4 flex-1 min-w-0">
          <!-- Back Button -->
          <%= link_to timelines_path, class: "inline-flex items-center text-gray-500 hover:text-gray-700 transition-colors flex-shrink-0 p-2 rounded-lg hover:bg-gray-100", title: "Back to all Timelines" do %>
            <i class="material-icons text-lg">arrow_back</i>
          <% end %>
          
          <!-- Timeline Title and Subtitle -->
          <div class="flex-1 min-w-0">
            <h1 class="text-xl font-semibold text-gray-900 truncate">
              <%= @timeline.name.present? ? @timeline.name : 'Untitled Timeline' %>
            </h1>
            
            <div class="flex items-center mt-1 space-x-2">
              <% if @timeline.subtitle.present? %>
                <span class="text-sm text-gray-600 truncate">
                  <%= @timeline.subtitle %>
                </span>
                <span class="text-gray-400">â€¢</span>
              <% end %>
              
              <!-- Creator Attribution in Header -->
              <div class="flex items-center space-x-1">
                <span class="text-xs text-gray-500">by</span>
                <%= link_to @timeline.user.name, @timeline.user, 
                    class: "text-xs font-medium text-green-600 hover:text-green-500 transition-colors truncate" %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="flex items-center space-x-3 ml-4">
          <!-- Action Buttons -->
          <% if current_user && @timeline.user == current_user %>
            <%= link_to edit_timeline_path(@timeline), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors" do %>
              <i class="material-icons text-lg mr-2">edit</i>
              <span class="hidden sm:inline">Edit</span>
            <% end %>
          <% end %>
          
          <!-- Share Button -->
          <button onclick="openShareModal()" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
            <i class="material-icons text-lg mr-2">share</i>
            <span class="hidden sm:inline">Share</span>
          </button>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Timeline Content -->
  <main class="max-w-4xl mx-auto py-8 px-6">
    <!-- Timeline Container -->
    <div class="timeline-viewer-container relative">
      <!-- Timeline Rail -->
      <div class="absolute top-0 bottom-0 left-6 w-0.5 bg-gray-300 timeline-spine rounded-full"></div>
      
      <!-- Timeline Header -->
      <% if @timeline.description.present? || @timeline.notes.present? || @timeline.universe.present? || @timeline.page_tags.any? %>
        <div class="timeline-header-container relative mb-8">
          <!-- Header Dot -->
          <div class="absolute left-6 top-6 w-6 h-6 bg-blue-600 rounded-full z-10 timeline-header-dot shadow-sm flex items-center justify-center"
               title="Timeline Overview">
            <i class="material-icons text-white text-xs">description</i>
          </div>
          
          <!-- Header Card -->
          <div class="ml-16 timeline-header-card bg-white rounded-xl shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-100">
              <h3 class="text-lg font-semibold text-gray-900">Timeline Overview</h3>
            </div>
            
            <div class="px-6 py-4 space-y-4">
              <!-- Description -->
              <% if @timeline.description.present? %>
                <div>
                  <h4 class="text-sm font-medium text-gray-700 mb-2">Description</h4>
                  <div class="prose prose-sm text-gray-700 max-w-none">
                    <%= simple_format(@timeline.description) %>
                  </div>
                </div>
              <% end %>

              <!-- Notes -->
              <% if @timeline.notes.present? %>
                <div>
                  <h4 class="text-sm font-medium text-gray-700 mb-2">Notes</h4>
                  <div class="prose prose-sm text-gray-700 max-w-none">
                    <%= simple_format(@timeline.notes) %>
                  </div>
                </div>
              <% end %>

              <!-- Tags -->
              <% if @timeline.page_tags.any? %>
                <div>
                  <h4 class="text-sm font-medium text-gray-700 mb-2">Tags</h4>
                  <div class="flex flex-wrap gap-2">
                    <% @timeline.page_tags.each do |tag| %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800 border border-blue-200">
                        <%= tag.tag %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <!-- Universe -->
              <% if @timeline.universe.present? %>
                <div>
                  <h4 class="text-sm font-medium text-gray-700 mb-2">Universe</h4>
                  <div class="inline-flex items-center">
                    <i class="material-icons text-sm mr-2 text-purple-600">public</i>
                    <%= link_to @timeline.universe.name, @timeline.universe, 
                        class: "text-purple-600 hover:text-purple-800 font-medium transition-colors" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      
      <!-- Timeline Events -->
      <% if @timeline.timeline_events.any? %>
        <% @timeline.timeline_events.includes(:timeline_event_entities, :page_tags).each_with_index do |event, index| %>
          <div class="timeline-event-container relative mb-8 last:mb-0">
            <!-- Timeline Connection -->
            <div class="absolute left-6 top-6 w-6 h-6 <%= Timeline.color %> rounded-full z-10 timeline-dot shadow-sm flex items-center justify-center" 
                 title="<%= event.event_type_name %>">
              <i class="material-icons text-white text-xs"><%= event.event_type_icon %></i>
            </div>
            
            <!-- Event Card -->
            <div class="ml-16 bg-white rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition-all duration-200 timeline-event-card">
              <!-- Card Header -->
              <div class="px-6 py-4 border-b border-gray-100">
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <h2 class="text-xl font-semibold text-gray-900 mb-2">
                      <%= event.title.present? ? event.title : "Untitled Event" %>
                    </h2>
                    
                    <!-- Time Information -->
                    <% if event.time_label.present? || event.end_time_label.present? %>
                      <div class="flex items-center space-x-4 text-sm text-gray-600">
                        <% if event.time_label.present? %>
                          <div class="flex items-center">
                            <i class="material-icons text-sm mr-1 text-green-600">schedule</i>
                            <span><%= event.time_label %></span>
                          </div>
                        <% end %>
                        
                        <% if event.end_time_label.present? %>
                          <div class="flex items-center">
                            <i class="material-icons text-sm mr-1 text-red-600">schedule</i>
                            <span>to <%= event.end_time_label %></span>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
              
              <!-- Card Body -->
              <div class="px-6 py-4 space-y-4">
                <!-- Description -->
                <% if event.description.present? %>
                  <div class="prose prose-sm text-gray-700 max-w-none">
                    <%= simple_format(event.description) %>
                  </div>
                <% end %>
                
                <!-- Tags Display -->
                <% if event.page_tags.any? %>
                  <div class="flex flex-wrap gap-2">
                    <% event.page_tags.each do |tag| %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600 border border-gray-200">
                        <%= tag.tag %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
                
                <!-- Linked Content -->
                <%= render 'shared/timeline_event_linked_content', timeline_event: event %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-16">
          <div class="mx-auto h-24 w-24 rounded-full bg-gradient-to-br from-green-100 to-green-200 flex items-center justify-center mb-6 shadow-sm">
            <i class="material-icons text-4xl text-green-600">timeline</i>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">This timeline is empty</h3>
          <p class="text-gray-600 mb-8 max-w-md mx-auto">
            No events have been added to this timeline yet.
          </p>
        </div>
      <% end %>
    </div>
    
    <!-- Enhanced Author Attribution -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <div class="max-w-md mx-auto">
        <!-- Creator Spotlight Card -->
        <div class="bg-gradient-to-r from-green-50 to-blue-50 rounded-xl p-6 border border-green-100 shadow-sm">
          <div class="text-center">
            <div class="flex items-center justify-center mb-3">
              <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                <i class="material-icons text-green-600">person</i>
              </div>
            </div>
            
            <h3 class="text-lg font-semibold text-gray-900 mb-1">
              <%= link_to @timeline.user.name, @timeline.user, 
                  class: "hover:text-green-600 transition-colors" %>
            </h3>
            
            <p class="text-sm text-gray-600 mb-4">
              Created this timeline
              <% if @timeline.created_at %>
                on <%= @timeline.created_at.strftime("%B %d, %Y") %>
              <% end %>
            </p>
            
            <!-- Timeline Stats -->
            <div class="flex justify-center space-x-6 text-sm text-gray-500 mb-4">
              <div class="text-center">
                <div class="font-medium text-gray-900">
                  <%= @timeline.timeline_events.count %>
                </div>
                <div class="text-xs">
                  <%= @timeline.timeline_events.count == 1 ? 'Event' : 'Events' %>
                </div>
              </div>
              
              <% if @timeline.cached_word_count && @timeline.cached_word_count > 0 %>
                <div class="text-center">
                  <div class="font-medium text-gray-900">
                    <%= number_with_delimiter(@timeline.cached_word_count) %>
                  </div>
                  <div class="text-xs">Words</div>
                </div>
              <% end %>
              
              <% if @timeline.timeline_events.joins(:timeline_event_entities).count > 0 %>
                <div class="text-center">
                  <div class="font-medium text-gray-900">
                    <%= @timeline.timeline_events.joins(:timeline_event_entities).count %>
                  </div>
                  <div class="text-xs">Links</div>
                </div>
              <% end %>
            </div>
            
            <!-- Call-to-action -->
            <div class="border-t border-green-100 pt-4">
              <%= link_to @timeline.user, 
                  class: "inline-flex items-center px-4 py-2 bg-white border border-green-200 rounded-lg text-sm font-medium text-green-600 hover:bg-green-50 transition-colors shadow-sm" do %>
                <i class="material-icons text-sm mr-2">visibility</i>
                View more from <%= @timeline.user.name.split(' ').first %>
              <% end %>
            </div>
          </div>
        </div>
        
        <!-- Powered by -->
        <div class="text-center mt-4">
          <p class="text-xs text-gray-400">
            Powered by <%= link_to "Notebook.ai", "https://www.notebook.ai", 
                         class: "text-green-600 hover:text-green-500 transition-colors font-medium" %>
          </p>
        </div>
      </div>
    </div>
  </main>
</div>

<!-- Share Modal -->
