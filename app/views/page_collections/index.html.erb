        <div class="flex items-center">
          <i class="material-icons text-green-600 mr-3">info</i>
          <span class="text-green-800 text-sm">These collections are actively accepting submissions from the community.</span>
        </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% accepting_submissions.each do |collection| %>
          <%= render partial: "collection_card", locals: { collection: collection, show_submission_badge: true } %>
        <% end %>
