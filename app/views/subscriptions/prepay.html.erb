                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-gray-600 dark:text-gray-300">Premium Code:</span>
                    <% if invoice.activateable? %>
                      <code class="text-sm font-mono bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded text-gray-900 dark:text-white"><%= invoice.page_unlock_promo_code.code %></code>
