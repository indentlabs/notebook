<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-700 dark:text-white">
      Your Data Vault
    </h1>
    <div class="relative">
      <input id="data-vault-search" type="text" placeholder="Search tools..." class="pl-10 pr-10 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-800 dark:text-white">
      <i class="material-icons absolute left-3 top-2 text-gray-400 dark:text-gray-500">search</i>
      <button id="clear-search" class="absolute right-2 top-2 text-gray-400 hover:text-gray-600 dark:text-gray-500 dark:hover:text-gray-300 hidden">
        <i class="material-icons">close</i>
      </button>
    </div>
    <div id="no-results-message" class="hidden mt-4 p-4 bg-yellow-100 text-yellow-800 rounded-lg">
      No matching tools found. Try a different search term.
    </div>
  </div>

  <!-- Featured Section -->
