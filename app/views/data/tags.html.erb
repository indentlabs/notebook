<%
  showed_any_tags = false
%>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center mb-8">
    <%= link_to data_vault_path, class: 'text-gray-500 hover:text-gray-700 mr-3', title: "Back to your Data Vault" do %>
      <i class="material-icons">arrow_back</i>
    <% end %>
    <h1 class="text-3xl font-bold text-gray-700">Your Tags</h1>
  </div>

  <!-- Header Section -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Organize Your Notebook with Tags</h2>
      <div class="prose prose-blue max-w-none">
        <p class="text-gray-600">
          Tags help you organize and find related content across your notebook. Add tags to any page and then filter your content by those tags.
        </p>
        
        <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-blue-50 rounded-lg p-4">
            <h3 class="text-lg font-medium text-gray-800 mb-2">How to Add Tags</h3>
            <ul class="text-gray-600 space-y-2">
              <li class="flex items-start">
                <span class="inline-flex items-center justify-center h-5 w-5 rounded-full bg-blue-100 text-blue-600 mr-2 mt-0.5">1</span>
                <span>Open any page in your notebook</span>
              </li>
              <li class="flex items-start">
                <span class="inline-flex items-center justify-center h-5 w-5 rounded-full bg-blue-100 text-blue-600 mr-2 mt-0.5">2</span>
                <span>Find the "Tags" field in the page's attributes</span>
              </li>
              <li class="flex items-start">
                <span class="inline-flex items-center justify-center h-5 w-5 rounded-full bg-blue-100 text-blue-600 mr-2 mt-0.5">3</span>
                <span>Type your tags separated by commas</span>
              </li>
            </ul>
          </div>
          
          <div class="bg-green-50 rounded-lg p-4">
            <h3 class="text-lg font-medium text-gray-800 mb-2">How to Use Tags</h3>
            <ul class="text-gray-600 space-y-2">
              <li class="flex items-start">
                <span class="inline-flex items-center justify-center h-5 w-5 rounded-full bg-green-100 text-green-600 mr-2 mt-0.5">1</span>
                <span>Click on any tag to filter your notebook</span>
              </li>
              <li class="flex items-start">
                <span class="inline-flex items-center justify-center h-5 w-5 rounded-full bg-green-100 text-green-600 mr-2 mt-0.5">2</span>
                <span>Use this page to manage all your tags</span>
              </li>
              <li class="flex items-start">
                <span class="inline-flex items-center justify-center h-5 w-5 rounded-full bg-green-100 text-green-600 mr-2 mt-0.5">3</span>
                <span>Rename or delete tags as needed</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="space-y-6">
    <% (Rails.application.config.content_types[:all] + [Document, Timeline]).each do |content_type| %>
      <%
        grouped_tags = PageTag.where(page_type: content_type.name, user_id: current_user).order('tag ASC').group_by(&:tag)

        next if grouped_tags.values.length == 0

        showed_any_tags = true
      %>

      <div class="bg-white rounded-lg shadow overflow-hidden" x-data="{ open: false }">
        <div class="flex items-center justify-between px-6 py-4 bg-gray-50 cursor-pointer"
             @click="open = !open">
          <div class="flex items-center">
            <div class="w-8 h-8 rounded-full bg-<%= content_type.text_color %> flex items-center justify-center mr-3">
              <i class="material-icons text-white text-sm"><%= content_type.icon %></i>
            </div>
            <span class="font-medium text-gray-800"><%= content_type.name %> tags</span>
          </div>
          <div class="flex items-center">
            <span class="bg-gray-200 text-gray-700 text-sm rounded-full px-3 py-1"><%= grouped_tags.values.length %></span>
            <svg :class="{'rotate-180': open}" class="w-5 h-5 ml-2 transform transition-transform duration-200" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>
        
        <div x-show="open" x-cloak class="divide-y divide-gray-200">
          <% grouped_tags.each do |tag, page_list| %>
            <div class="p-6 border-b border-gray-200">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="md:col-span-1">
                  <div class="mb-4">
                    <%=
                      link_to send(
                        "#{content_type.name.downcase.pluralize}_path",
                        slug: PageTagService.slug_for(tag)
                      ) do
                    %>
                      <span class="inline-block px-3 py-1 rounded-full text-white bg-<%= content_type.text_color %>">
                        <%= tag %>
                      </span>
                    <% end %>
                  </div>
                  
                  <div class="mb-6">
                    <%= form_for tag, url: rename_tag_path(tag: tag), html: { class: "space-y-4" } do |f| %>
                      <div class="relative">
                        <%= f.text_field :label, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500', value: tag %>
                        <%= f.label :label, 'Rename tag', class: 'absolute -top-2 left-2 px-1 bg-white text-xs text-gray-600' %>
                      </div>
                      <div>
                        <%= f.submit 'Mass-rename', class: 'px-4 py-2 bg-white border border-blue-500 text-blue-500 rounded-md hover:bg-blue-50 transition-colors' %>
                      </div>
                    <% end %>
                  </div>
                  
                  <div class="text-right">
                    <%=
                      link_to 'Delete this tag', tag_remove_path(
                        page_type: content_type.name,
                        slug: PageTagService.slug_for(tag)
                      ), data: {
                        confirm: "Are you sure? This will delete this tag and remove it from all pages."
                      }, class: 'px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors'
                    %>
                  </div>
                </div>
                
                <div class="md:col-span-2">
                  <div class="text-gray-500 mb-4">
                    Used by <%= pluralize page_list.length, 'page' %>
                  </div>
                  
                  <div class="flex flex-wrap gap-2">
                    <% page_list.each do |page_tag| %>
                      <div class="flex items-center bg-gray-100 rounded-full pl-2 pr-1 py-1 js-load-page-name" data-klass="<%= page_tag.page_type %>" data-id="<%= page_tag.page_id %>">
                        <%= link_to send("#{page_tag.page_type.downcase}_path", page_tag.page_id), class: "flex items-center" do %>
                          <span class="text-<%= content_type.text_color %> mr-1">
                            <i class="material-icons text-sm">
                              <%= content_type.icon %>
                            </i>
                          </span>
                          <span class="name-container text-gray-800 mr-1">
                            <em class="text-sm">Loading <%= content_type.name %> name...</em>
                          </span>
                        <% end %>
                        <%= link_to destroy_specific_tag_path(page_tag), method: :delete, class: 'ml-1 p-1 text-gray-500 hover:text-gray-700 rounded-full hover:bg-gray-200', data: { tooltip: 'Remove this tag from this page' }, remote: true do %>
                          <i class="material-icons text-sm">close</i>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <% if !showed_any_tags %>
    <div class="bg-white rounded-lg shadow p-8 text-center">
      <div class="inline-block p-4 rounded-full bg-gray-100 mb-4">
        <i class="material-icons text-gray-400 text-4xl">sell</i>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No Tags Yet</h3>
      <p class="text-gray-600 max-w-md mx-auto">
        When you create tags for your pages, they'll appear here. Add tags to any page to help organize your content.
      </p>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize Alpine.js components for collapsible sections
    if (window.Alpine) {
      // If Alpine is already initialized, we're good
      if (!window.Alpine.initialized) {
        window.Alpine.start();
      }
    } else {
      console.warn('Alpine.js is not loaded. Collapsible sections may not work properly.');
      
      // Fallback for collapsible sections if Alpine.js is not available
      document.querySelectorAll('[x-data="{ open: false }"]').forEach(function(section) {
        const header = section.querySelector('[x-data="{ open: false }"] > div');
        const content = section.querySelector('[x-show="open"]');
        
        if (header && content) {
          content.style.display = 'none';
          
          header.addEventListener('click', function() {
            if (content.style.display === 'none') {
              content.style.display = 'block';
              header.querySelector('svg').classList.add('rotate-180');
            } else {
              content.style.display = 'none';
              header.querySelector('svg').classList.remove('rotate-180');
            }
          });
        }
      });
    }
    
    // Load page names for tagged items
    function loadPageNames() {
      document.querySelectorAll('.js-load-page-name').forEach(function(element) {
        const pageType = element.getAttribute('data-klass');
        const pageId = element.getAttribute('data-id');
        const nameContainer = element.querySelector('.name-container');
        
        if (!pageType || !pageId || !nameContainer) return;
        
        fetch(`/api/v1/page_name?type=${pageType}&id=${pageId}`)
          .then(response => response.json())
          .then(data => {
            if (data && data.name) {
              nameContainer.textContent = data.name;
            } else {
              nameContainer.textContent = 'Unnamed page';
            }
          })
          .catch(error => {
            console.error('Error loading page name:', error);
            nameContainer.textContent = 'Error loading name';
          });
      });
    }
    
    // Load page names on page load
    loadPageNames();
    
    // Set up tooltips
    document.querySelectorAll('[data-tooltip]').forEach(element => {
      const tooltipText = element.getAttribute('data-tooltip');
      
      element.addEventListener('mouseenter', function(e) {
        const tooltip = document.createElement('div');
        tooltip.className = 'absolute z-10 px-3 py-2 text-sm font-medium text-white bg-gray-900 rounded-lg shadow-sm tooltip';
        tooltip.textContent = tooltipText;
        tooltip.style.top = `${e.target.offsetTop - 40}px`;
        tooltip.style.left = `${e.target.offsetLeft + (e.target.offsetWidth / 2) - 80}px`;
        
        document.body.appendChild(tooltip);
        
        // Position tooltip
        const rect = tooltip.getBoundingClientRect();
        if (rect.left < 0) {
          tooltip.style.left = '0px';
        } else if (rect.right > window.innerWidth) {
          tooltip.style.left = `${window.innerWidth - rect.width - 10}px`;
        }
        
        // Add arrow
        const arrow = document.createElement('div');
        arrow.className = 'tooltip-arrow';
        arrow.style.position = 'absolute';
        arrow.style.width = '10px';
        arrow.style.height = '10px';
        arrow.style.background = '#1F2937';
        arrow.style.transform = 'rotate(45deg)';
        arrow.style.bottom = '-5px';
        arrow.style.left = 'calc(50% - 5px)';
        tooltip.appendChild(arrow);
      });
      
      element.addEventListener('mouseleave', function() {
        const tooltip = document.querySelector('.tooltip');
        if (tooltip) {
          document.body.removeChild(tooltip);
        }
      });
    });
  });
</script>