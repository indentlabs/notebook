<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center mb-8">
    <%= link_to data_vault_path, class: 'text-gray-500 hover:text-gray-700 mr-3', title: "Back to your Data Vault" do %>
      <i class="material-icons">arrow_back</i>
    <% end %>
    <h1 class="text-3xl font-bold text-gray-700">Your years in review</h1>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @years.each do |year| %>
      <%= link_to review_year_path(year), class: "block group" do %>
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 border-t-4 border-blue-500 p-6 text-center">
          <h2 class="text-4xl font-bold text-blue-600 group-hover:text-blue-700 transition-colors mb-2"><%= year %></h2>
          <p class="text-gray-500">
            Click to see your Notebook.ai activity for <%= year %>.
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>