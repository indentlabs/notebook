<style>
  @keyframes gentle-drift {
    0%, 100% {
      transform: scale(1.01) translateX(0);
    }
    25% {
      transform: scale(1.015) translateX(-1%);
    }
    50% {
      transform: scale(1.02) translateX(0);
    }
    75% {
      transform: scale(1.015) translateX(1%);
    }
  }
  
  .breathing-header {
    animation: gentle-drift 12s ease-in-out infinite;
  }
  
  /* Simplified universe portal effect */
  .universe-portal {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }
  
  /* Event horizon (dark center) - simple fade in */
  .universe-portal::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 35%;
    height: 35%;
    transform: translate(-50%, -50%);
    background: radial-gradient(circle at center,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.4) 40%,
      rgba(0, 0, 0, 0) 70%
    );
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    z-index: 2;
  }
  
  /* Purple glow - static, no animation */
  .universe-portal::after {
    content: '';
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: radial-gradient(circle at center,
      transparent 30%,
      rgba(147, 51, 234, 0.2) 50%,
      rgba(168, 85, 247, 0.1) 70%,
      transparent 100%
    );
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    z-index: 1;
  }
  
  /* Simple hover effects for portal */
  li:hover .universe-portal {
    transform: scale(0.96);
    box-shadow: 
      0 0 30px rgba(147, 51, 234, 0.6),
      0 0 60px rgba(168, 85, 247, 0.3),
      inset 0 0 60px rgba(0, 0, 0, 0.5);
  }
  
  li:hover .universe-portal::before {
    opacity: 1;
  }
  
  li:hover .universe-portal::after {
    opacity: 1;
  }
  
  /* Simplified card black hole effect */
  .universe-card {
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.4s ease;
    cursor: pointer;
    background: white;
  }
  
  /* Single gradient background on hover */
  .universe-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at center,
      rgba(147, 51, 234, 0.05) 0%,
      rgba(168, 85, 247, 0.02) 50%,
      transparent 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    z-index: 0;
  }
  
  /* Card hover state - simple transitions only */
  .universe-card:hover {
    transform: scale(0.98);
    box-shadow: 
      0 10px 40px rgba(147, 51, 234, 0.3),
      0 0 80px rgba(147, 51, 234, 0.15) inset;
  }
  
  .universe-card:hover::before {
    opacity: 1;
  }
  
  .universe-card > * {
    position: relative;
    z-index: 1;
  }
  
  .universe-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }
  
  /* All Universes card hover effect */
  .all-universes-card {
    transition: transform 0.3s ease, box-shadow 0.4s ease;
  }
  
  .all-universes-card:hover {
    transform: scale(0.98) translateY(-2px);
    box-shadow: 
      0 20px 40px rgba(147, 51, 234, 0.3),
      0 0 60px rgba(168, 85, 247, 0.2);
  }
  
  .all-universes-gradient-border {
    transition: opacity 0.3s ease;
  }
  
  .all-universes-card:hover .all-universes-gradient-border {
    opacity: 0.9;
  }
</style>

<div class="relative bg-purple-900">
  <div class="h-56 bg-indigo-600 sm:h-72 md:absolute md:left-0 md:h-full md:w-1/2 overflow-hidden">
    <%= image_tag asset_path("card-headers/universes.webp"), class: 'w-full h-full object-cover breathing-header' %>
  </div>
  <div class="relative max-w-7xl mx-auto px-4 py-12 sm:px-6 lg:px-8 lg:py-16">
    <div class="md:ml-auto md:w-1/2 md:pl-10">
      <h2 class="text-base font-semibold uppercase tracking-wider text-gray-300">
        Filter your notebook
      </h2>
      <p class="mt-2 text-white text-3xl font-extrabold tracking-tight sm:text-4xl">
        Welcome to your own personal multiverse.
      </p>
      <p class="mt-3 text-lg text-gray-300">
        Universes are a convenient way to organize your notebook pages into separate worlds.
        You can click on any universe below to filter your entire notebook to just that universe &mdash;
        and focus on just the world you're working on.
      </p>
      <div class="mt-8">
        <div class="inline-flex rounded-md shadow">
          <a href="#" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-gray-900 bg-white hover:bg-gray-50">
            Learn more about universes
            <!-- Heroicon name: solid/external-link -->
            <svg class="-mr-1 ml-3 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
              <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<section class="container mx-auto mt-8">
  <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    <li class="col-span-1 flex flex-col text-center bg-gradient-to-br from-purple-50 via-white to-blue-50 rounded-lg shadow-lg border-2 border-transparent bg-clip-padding relative overflow-hidden group all-universes-card">
      <div class="absolute inset-0 bg-gradient-to-br from-purple-400 via-pink-400 to-blue-400 opacity-50 transition-opacity duration-300 all-universes-gradient-border" style="margin: -2px; border-radius: 0.5rem; z-index: -1;"></div>
      <%= link_to dashboard_path(universe: 'all'), class: 'flex flex-col h-full p-8 relative bg-white rounded-lg', style: 'margin: 2px;' do %>
        <div class="flex-1 flex flex-col">
          <div class="w-48 h-48 mx-auto rounded-full bg-gradient-to-br from-purple-100 via-pink-50 to-blue-100 flex items-center justify-center transition-all duration-300 group-hover:scale-105 relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-r from-purple-200 via-transparent to-blue-200 opacity-50 animate-pulse"></div>
            <div class="text-center relative z-10">
              <div class="relative">
                <i class="material-icons text-6xl text-transparent bg-gradient-to-br from-purple-600 to-blue-600 bg-clip-text relative"><%= Universe.icon %></i>
              </div>
              <p class="text-xs font-bold mt-2 text-transparent bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text uppercase tracking-wider">All Worlds</p>
            </div>
          </div>
          <h3 class="mt-6 text-gray-900 text-sm font-bold group-hover:text-purple-700">View Everything</h3>
          <dl class="mt-1 flex-grow flex flex-col justify-between">
            <dd class="text-gray-600 text-sm">See content from <em>all</em> your universes together in one place</dd>
          </dl>
          <div class="mt-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-purple-100 to-blue-100 text-purple-800 border border-purple-200">
              <i class="material-icons text-sm mr-1">all_inclusive</i>
              No Filter Active
            </span>
          </div>
        </div>
      <% end %>
    </li>

    <% @universes.each do |universe| %>
      <li class="col-span-1 flex flex-col text-center bg-white rounded-lg shadow universe-card">
        <%= link_to dashboard_path(universe: universe.id), class: 'universe-card-link flex flex-col h-full' do %>
          <div class="flex-1 flex flex-col p-8">
            <%= image_tag universe.random_image_including_private, class: 'w-48 h-48 flex-shrink-0 mx-auto rounded-full border-2 border-purple-800 universe-portal' %>
            <h3 class="mt-6 text-gray-900 text-sm font-medium"><%= universe.name %></h3>
            <dl class="mt-1 flex-grow flex flex-col justify-between">
              <dd class="text-gray-500 text-sm"><%= universe.description %></dd>
              <dd class="mt-3">
                <% if universe.user_id == current_user.id %>
                  <span class="px-2 py-1 text-green-800 text-xs font-medium bg-green-100 rounded-full">Owner</span>
                <% else %>
                  <span class="px-2 py-1 text-green-800 text-xs font-medium bg-green-100 rounded-full">Collaborator</span>
                <% end %>
              </dd>
            </dl>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
  
  <!-- Universe Count and Create Section -->
  <div class="mt-12 mb-8">
    <div class="max-w-4xl mx-auto px-6">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <% universe_count = @universes.size %>
            <% is_premium = current_user.on_premium_plan? %>
            
            <% if is_premium %>
              <!-- Premium user display -->
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-700 rounded-full flex items-center justify-center">
                    <i class="material-icons text-white">all_inclusive</i>
                  </div>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-gray-900">
                    <%= universe_count %> <%= 'universe'.pluralize(universe_count) %>
                  </h3>
                  <p class="text-sm text-gray-500">
                    Unlimited universes with Premium
                  </p>
                </div>
              </div>
            <% else %>
              <!-- Free user display -->
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="relative">
                    <svg class="w-12 h-12 transform -rotate-90">
                      <circle cx="24" cy="24" r="20" stroke="#E5E7EB" stroke-width="4" fill="none" />
                      <circle cx="24" cy="24" r="20" 
                              stroke="url(#gradient)" 
                              stroke-width="4" 
                              fill="none"
                              stroke-dasharray="<%= (universe_count / 5.0 * 125.6).round %> 125.6"
                              stroke-linecap="round" />
                      <defs>
                        <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                          <stop offset="0%" stop-color="#9333EA" />
                          <stop offset="100%" stop-color="#A855F7" />
                        </linearGradient>
                      </defs>
                    </svg>
                    <div class="absolute inset-0 flex items-center justify-center">
                      <span class="text-sm font-bold text-gray-900"><%= universe_count %>/5</span>
                    </div>
                  </div>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-gray-900">
                    <%= universe_count %> <%= 'universe'.pluralize(universe_count) %>
                  </h3>
                  <p class="text-sm text-gray-500">
                    <% if universe_count < 5 %>
                      Starter plan includes 5 universes • <%= 5 - universe_count %> more available
                    <% else %>
                      Starter plan includes 5 universes
                    <% end %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
          
          <div class="ml-6">
            <% if !is_premium && universe_count >= 5 %>
              <div class="text-right">
                <p class="text-xs text-gray-500 mb-2">Need more universes?</p>
                <%= link_to subscription_path, class: "inline-flex items-center px-4 py-2 border border-purple-200 text-sm font-medium rounded-md text-purple-700 bg-white hover:bg-purple-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200" do %>
                  <i class="material-icons mr-1 text-base">info</i>
                  View Plan Options
                <% end %>
              </div>
            <% else %>
              <%= link_to new_universe_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 shadow-lg hover:shadow-xl" do %>
                <i class="material-icons mr-2">add_circle</i>
                Create New Universe
              <% end %>
            <% end %>
          </div>
        </div>
        
        <% if !is_premium && universe_count >= 4 && universe_count < 5 %>
          <!-- Info note when close to limit -->
          <div class="mt-4 p-3 bg-blue-50 border border-blue-200 rounded-md">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="material-icons text-blue-600 text-sm">lightbulb</i>
              </div>
              <div class="ml-2">
                <p class="text-sm text-blue-800">
                  <strong>Tip:</strong> You're using <%= universe_count %> of your 5 Starter plan universes. Premium plans include unlimited universes plus many other features. <%= link_to "Learn more", subscription_path, class: "font-medium underline hover:no-underline" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>