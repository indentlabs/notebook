<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Moderation Hub</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Reported Shares -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Reported Shares</h2>
      <div class="mb-4">
        <div class="text-center">
          <div class="text-4xl font-bold text-gray-900 dark:text-white"><%= number_with_delimiter(@reported_shares_count) %></div>
          <div class="text-sm text-gray-500 dark:text-gray-400">pending review</div>
        </div>
      </div>
      <ul class="space-y-2">
        <li>
          <%= link_to admin_reported_shares_path, class: "text-blue-600 dark:text-blue-400 hover:underline inline-flex items-center" do %>
            View all reported shares
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
        </li>
      </ul>
    </div>

    <!-- Forum Moderation -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Forum Moderation</h2>
      <div class="mb-4">
        <div class="text-center">
          <div class="text-4xl font-bold text-gray-900 dark:text-white"><%= number_with_delimiter(@pending_forum_posts_count) %></div>
          <div class="text-sm text-gray-500 dark:text-gray-400">pending review</div>
        </div>
      </div>
      <ul class="space-y-2">
        <li>
          <%= link_to "/forum/admin/moderation", class: "text-blue-600 dark:text-blue-400 hover:underline inline-flex items-center" do %>
            Open moderation queue
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
