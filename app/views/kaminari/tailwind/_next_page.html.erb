<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if current_page.last? %>
  <span class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 dark:border-white dark:border-opacity-10 bg-white dark:bg-white dark:bg-opacity-5 text-sm font-medium text-gray-300 dark:text-white dark:text-opacity-30 cursor-not-allowed sm:rounded-none">
    <span class="sr-only">Next</span>
    <i class="material-icons text-sm">chevron_right</i>
  </span>
<% else %>
  <%= link_to url, rel: 'next', remote: remote, class: 'relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 dark:border-white dark:border-opacity-10 bg-white dark:bg-white dark:bg-opacity-5 text-sm font-medium text-gray-500 dark:text-white dark:text-opacity-60 hover:bg-gray-50 dark:hover:bg-white dark:hover:bg-opacity-10 sm:rounded-none' do %>
    <span class="sr-only">Next</span>
    <i class="material-icons text-sm">chevron_right</i>
  <% end %>
<% end %>