<!-- Beautiful Changelog Header with Stats -->
<div class="bg-gradient-to-br from-gray-50 to-white dark:from-gray-900 dark:to-gray-800 border-b border-gray-200 dark:border-gray-700">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Breadcrumb Navigation removed (moved to shared header) -->

    <!-- Main Header -->
    <div class="mb-8">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 rounded-xl <%= @serialized_content.class_color %> flex items-center justify-center shadow-lg mr-4">
          <i class="material-icons text-white text-xl"><%= @serialized_content.class_icon %></i>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-1">
            Your Creative Journey
          </h1>
          <p class="text-gray-600 dark:text-gray-400">
            Every change you've made to <span class="font-medium dark:text-gray-300"><%= @serialized_content.name %></span>
          </p>
        </div>
      </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
      <!-- Total Changes -->
      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex items-center">
          <div class="w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
            <i class="material-icons text-blue-600 dark:text-blue-400 text-lg">edit</i>
          </div>
          <div class="ml-3">
            <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= number_with_delimiter(@stats.total_changes) %></div>
            <div class="text-sm text-gray-500 dark:text-gray-400">Total changes</div>
          </div>
        </div>
      </div>

      <!-- Active Days -->
      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex items-center">
          <div class="w-10 h-10 rounded-lg bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
            <i class="material-icons text-green-600 dark:text-green-400 text-lg">calendar_today</i>
          </div>
          <div class="ml-3">
            <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= @stats.active_days %></div>
            <div class="text-sm text-gray-500 dark:text-gray-400"><%= @stats.active_days == 1 ? 'Day with edits' : 'Days with edits' %></div>
          </div>
        </div>
      </div>

      <!-- Biggest Single Session -->
      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex items-center">
          <div class="w-10 h-10 rounded-lg bg-orange-100 dark:bg-orange-900/30 flex items-center justify-center">
            <i class="material-icons text-orange-600 dark:text-orange-400 text-lg">trending_up</i>
          </div>
          <div class="ml-3">
            <% biggest_update = @stats.biggest_single_update %>
            <% field_count = biggest_update ? biggest_update[:field_count] : 0 %>
            <div class="text-2xl font-bold text-gray-900 dark:text-white">
              <%= pluralize(field_count, 'change') %>
            </div>
            <div class="text-sm text-gray-500 dark:text-gray-400">Biggest Edit Session</div>
          </div>
        </div>
      </div>

      <!-- Days Since Creation -->
      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex items-center">
          <div class="w-10 h-10 rounded-lg bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center">
            <i class="material-icons text-purple-600 dark:text-purple-400 text-lg">schedule</i>
          </div>
          <div class="ml-3">
            <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= pluralize(@stats.days_since_creation, 'day') %></div>
            <div class="text-sm text-gray-500 dark:text-gray-400">Since creation</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Activity Heatmap -->
    <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1 flex items-center">
        <i class="material-icons text-gray-600 dark:text-gray-400 mr-2">show_chart</i>
        Activity Over Time
      </h3>
      <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
        Weekly editing activity over the past year
      </p>

      <div class="overflow-x-auto" id="activity-chart-scroll">
        <div class="flex items-center justify-end space-x-1 min-w-max">
          <% @change_intensity.each do |week_data| %>
            <%
              intensity_level = case week_data[:change_count]
                               when 0 then 'bg-gray-100 dark:bg-gray-700'
                               when 1..3 then 'bg-green-200 dark:bg-green-900'
                               when 4..7 then 'bg-green-400 dark:bg-green-700'
                               when 8..15 then 'bg-green-600 dark:bg-green-600'
                               else 'bg-green-800 dark:bg-green-500'
                               end
            %>
            <div class="w-3 h-8 rounded-sm flex-shrink-0 <%= intensity_level %> border border-gray-200 dark:border-gray-600"
                 title="<%= week_data[:change_count] %> <%= week_data[:change_count] == 1 ? 'edit' : 'edits' %> during week of <%= week_data[:week_start].strftime('%b %d') %>">
            </div>
          <% end %>
        </div>
      </div>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          var container = document.getElementById('activity-chart-scroll');
          if (container) {
            container.scrollLeft = container.scrollWidth;
          }
        });
      </script>

      <div class="flex justify-between text-xs text-gray-500 dark:text-gray-400 mt-2">
        <span>1 year ago</span>
        <span>Today</span>
      </div>

      <div class="flex items-center justify-end space-x-2 mt-3 text-xs text-gray-500 dark:text-gray-400">
        <span>Less</span>
        <div class="w-3 h-3 rounded-sm bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600"></div>
        <div class="w-3 h-3 rounded-sm bg-green-200 dark:bg-green-900 border border-gray-200 dark:border-gray-600"></div>
        <div class="w-3 h-3 rounded-sm bg-green-400 dark:bg-green-700 border border-gray-200 dark:border-gray-600"></div>
        <div class="w-3 h-3 rounded-sm bg-green-600 dark:bg-green-600 border border-gray-200 dark:border-gray-600"></div>
        <div class="w-3 h-3 rounded-sm bg-green-800 dark:bg-green-500 border border-gray-200 dark:border-gray-600"></div>
        <span>More</span>
      </div>
    </div>

    <!-- Writing Insights -->
    <% longest_streak = @stats.longest_writing_streak %>
    <% if longest_streak %>
      <div class="mt-6 bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 border border-blue-200 dark:border-blue-800 rounded-xl p-6">
        <div class="flex items-center">
          <div class="w-12 h-12 rounded-xl bg-blue-500 flex items-center justify-center shadow-lg mr-4">
            <i class="material-icons text-white text-xl">local_fire_department</i>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Your Longest Writing Streak</h3>
            <p class="text-gray-600 dark:text-gray-400">
              <span class="font-bold text-blue-600 dark:text-blue-400"><%= longest_streak[:length] %> consecutive days</span>
              from <%= longest_streak[:start_date].strftime('%B %d') %> to <%= longest_streak[:end_date].strftime('%B %d, %Y') %>
            </p>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>