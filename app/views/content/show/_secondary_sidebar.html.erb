<!-- Secondary Sidebar - Tools and Navigation -->
<div class="h-full overflow-y-auto">
  <div class="p-6 space-y-6">
    
    <!-- Page Image Card -->
    <% 
      # Get the same preview image as the header
      regular_images = raw_content.image_uploads.ordered.to_a
      unless user_signed_in? && raw_content.user_id == current_user.id
        regular_images = regular_images.select { |img| img.privacy == 'public' }
      end
      basil_images = raw_content.basil_commissions.where.not(saved_at: nil).ordered.to_a
      preview_image = get_preview_image(regular_images, basil_images)
    %>
    
    <div class="pb-4 border-b border-gray-200">
      <%= link_to send("gallery_#{raw_content.class.name.downcase}_path", raw_content), 
                  class: "block group", 
                  title: "View full gallery" do %>
        <div class="relative aspect-square rounded-xl overflow-hidden shadow-lg ring-1 ring-gray-200 group-hover:ring-2 group-hover:ring-blue-500 transition-all duration-200 bg-gray-100">
          <% if preview_image.present? %>
            <% image_type = preview_image[:type] %>
            <% image_data = preview_image[:data] %>
            
            <% if image_type == 'image_upload' %>
              <%= image_tag image_data.src.url, 
                            class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-200",
                            alt: "#{content.name} preview" %>
            <% elsif image_type == 'basil_commission' %>
              <% if image_data.image.attached? %>
                <%= image_tag rails_blob_path(image_data.image, disposition: "attachment"), 
                              class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-200",
                              alt: "#{content.name} preview" %>
              <% else %>
                <%= image_tag "content/card-headers/#{raw_content.class.name.downcase}.jpg", 
                              class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-200",
                              alt: "#{content.name} preview" %>
              <% end %>
            <% end %>
          <% else %>
            <%= image_tag "content/card-headers/#{raw_content.class.name.downcase}.jpg", 
                          class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-200",
                          alt: "#{content.name} preview" %>
          <% end %>
          
          <!-- Overlay on hover -->
          <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-opacity duration-200 flex items-center justify-center">
            <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-200 bg-white bg-opacity-90 rounded-full p-3">
              <i class="material-icons text-gray-700 text-xl">photo_library</i>
            </div>
          </div>
        </div>
        
        <div class="mt-3 text-center">
          <p class="text-sm font-medium text-gray-900">View Gallery</p>
          <p class="text-xs text-gray-500">Click to see all images</p>
        </div>
      <% end %>
    </div>
    
    <!-- Tools Header -->
    <div class="pb-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900 mb-2">Quick Links</h2>
      <p class="text-sm text-gray-500">External resources and navigation</p>
    </div>
    
    <!-- Coming Soon Notice -->
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <i class="material-icons text-yellow-600 text-lg">construction</i>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Coming Soon</h3>
          <p class="text-xs text-yellow-700 mt-1">
            External navigation links will appear here
          </p>
        </div>
      </div>
    </div>
    
    <!-- Placeholder Navigation Sections -->
    
    <!-- Related Tools Section -->
    <div class="space-y-3">
      <h3 class="text-sm font-semibold text-gray-900 flex items-center">
        <i class="material-icons text-sm <%= content.class_text_color %> mr-2">build</i>
        Writing Tools
      </h3>
      
      <div class="space-y-2 opacity-50">
        <div class="flex items-center p-2 text-sm text-gray-600 bg-gray-100 rounded-md">
          <i class="material-icons text-sm mr-2">edit</i>
          <span class="flex-1">Character Generator</span>
          <i class="material-icons text-xs">open_in_new</i>
        </div>
        
        <div class="flex items-center p-2 text-sm text-gray-600 bg-gray-100 rounded-md">
          <i class="material-icons text-sm mr-2">map</i>
          <span class="flex-1">Name Generator</span>
          <i class="material-icons text-xs">open_in_new</i>
        </div>
        
        <div class="flex items-center p-2 text-sm text-gray-600 bg-gray-100 rounded-md">
          <i class="material-icons text-sm mr-2">auto_stories</i>
          <span class="flex-1">Plot Generator</span>
          <i class="material-icons text-xs">open_in_new</i>
        </div>
      </div>
    </div>
    
    <!-- Resources Section -->
    <div class="space-y-3">
      <h3 class="text-sm font-semibold text-gray-900 flex items-center">
        <i class="material-icons text-sm <%= content.class_text_color %> mr-2">school</i>
        Resources
      </h3>
      
      <div class="space-y-2 opacity-50">
        <div class="flex items-center p-2 text-sm text-gray-600 bg-gray-100 rounded-md">
          <i class="material-icons text-sm mr-2">help</i>
          <span class="flex-1">Writing Guides</span>
          <i class="material-icons text-xs">open_in_new</i>
        </div>
        
        <div class="flex items-center p-2 text-sm text-gray-600 bg-gray-100 rounded-md">
          <i class="material-icons text-sm mr-2">video_library</i>
          <span class="flex-1">Tutorials</span>
          <i class="material-icons text-xs">open_in_new</i>
        </div>
        
        <div class="flex items-center p-2 text-sm text-gray-600 bg-gray-100 rounded-md">
          <i class="material-icons text-sm mr-2">forum</i>
          <span class="flex-1">Community</span>
          <i class="material-icons text-xs">open_in_new</i>
        </div>
      </div>
    </div>
    
    <!-- Research Section -->
    <div class="space-y-3">
      <h3 class="text-sm font-semibold text-gray-900 flex items-center">
        <i class="material-icons text-sm <%= content.class_text_color %> mr-2">search</i>
        Research
      </h3>
      
      <div class="space-y-2 opacity-50">
        <div class="flex items-center p-2 text-sm text-gray-600 bg-gray-100 rounded-md">
          <i class="material-icons text-sm mr-2">language</i>
          <span class="flex-1">Wikipedia</span>
          <i class="material-icons text-xs">open_in_new</i>
        </div>
        
        <div class="flex items-center p-2 text-sm text-gray-600 bg-gray-100 rounded-md">
          <i class="material-icons text-sm mr-2">image_search</i>
          <span class="flex-1">Image References</span>
          <i class="material-icons text-xs">open_in_new</i>
        </div>
        
        <div class="flex items-center p-2 text-sm text-gray-600 bg-gray-100 rounded-md">
          <i class="material-icons text-sm mr-2">public</i>
          <span class="flex-1">World Atlas</span>
          <i class="material-icons text-xs">open_in_new</i>
        </div>
      </div>
    </div>
    
    <!-- Related Content Section -->
    <div class="space-y-3">
      <h3 class="text-sm font-semibold text-gray-900 flex items-center">
        <i class="material-icons text-sm <%= content.class_text_color %> mr-2">explore</i>
        Explore More
      </h3>
      
      <div class="space-y-2 opacity-50">
        <div class="flex items-center p-2 text-sm text-gray-600 bg-gray-100 rounded-md">
          <i class="material-icons text-sm mr-2">trending_up</i>
          <span class="flex-1">Popular Content</span>
          <i class="material-icons text-xs">open_in_new</i>
        </div>
        
        <div class="flex items-center p-2 text-sm text-gray-600 bg-gray-100 rounded-md">
          <i class="material-icons text-sm mr-2">shuffle</i>
          <span class="flex-1">Random Content</span>
          <i class="material-icons text-xs">open_in_new</i>
        </div>
        
        <div class="flex items-center p-2 text-sm text-gray-600 bg-gray-100 rounded-md">
          <i class="material-icons text-sm mr-2">collections</i>
          <span class="flex-1">Featured Collections</span>
          <i class="material-icons text-xs">open_in_new</i>
        </div>
      </div>
    </div>
    
    <!-- Footer -->
    <div class="pt-6 border-t border-gray-200">
      <div class="text-center">
        <div class="mx-auto h-8 w-8 bg-gray-200 rounded-full flex items-center justify-center mb-3">
          <i class="material-icons text-gray-500 text-sm">more_horiz</i>
        </div>
        <p class="text-xs text-gray-500 mb-2">More tools coming soon</p>
        <p class="text-xs text-gray-400">
          All links will open in new tabs
        </p>
      </div>
    </div>
    
  </div>
</div>

<!-- Custom styling for the secondary sidebar -->
<style>
.secondary-sidebar-item {
  @apply flex items-center p-2 text-sm text-gray-600 rounded-md hover:bg-gray-100 transition-colors cursor-pointer;
}

.secondary-sidebar-item:hover {
  @apply text-gray-900;
}

.secondary-sidebar-section {
  @apply space-y-3;
}

.secondary-sidebar-header {
  @apply text-sm font-semibold text-gray-900 flex items-center;
}
</style>