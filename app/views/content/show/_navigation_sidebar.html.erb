<div class="h-full flex flex-col overflow-hidden">
  <!-- Navigation Content -->
  <div class="flex-1 overflow-y-auto pt-6">
    
    <!-- Categories Section -->
    <div class="px-4 pb-4 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-center justify-between mb-3">
        <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Categories</h3>
        <button @click="showAllCategories()" 
                :class="isExpandAllActive() ? '<%= content.class_color %> text-white' : 'text-gray-400 hover:text-gray-600'"
                class="p-1 rounded text-xs transition-colors"
                title="Show all categories">
          <i class="material-icons text-sm" 
             :class="isExpandAllActive() ? 'text-white' : ''">unfold_more</i>
        </button>
      </div>
      
      <nav class="space-y-0.5">
        <% content.data[:categories].each do |category| %>
          <% next if category[:label] == 'Gallery' %>
          <% next if category[:label] == 'Contributors' && raw_content.class.name == 'Universe' %>
          <% has_content = category[:fields].any? { |field| field[:value].present? } %>
          <% next unless has_content %>

          <button @click="showCategory('<%= category[:label] %>')"
                  :class="isCategoryActive('<%= category[:label] %>') ? '<%= content.class_color %> text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700'"
                  class="group flex items-center justify-between px-3 py-2 text-sm rounded-md w-full text-left transition-colors">
            <div class="flex items-center">
              <i class="material-icons text-lg mr-3"
                 :class="isCategoryActive('<%= category[:label] %>') ? 'text-white' : '<%= content.class_text_color %>'"><%= category[:icon] %></i>
              <span><%= category[:label] %></span>
            </div>
          </button>
        <% end %>
        
        <!-- Show All Categories option -->
        <button @click="showAllCategories()" 
                :class="isExpandAllActive() ? '<%= content.class_color %> text-white' : 'text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-700'"
                class="group flex items-center px-3 py-2 text-sm rounded-md w-full text-left transition-colors mt-1">
          <i class="material-icons text-lg mr-3" 
             :class="isExpandAllActive() ? 'text-white opacity-100' : 'opacity-60'">view_agenda</i>
          <span class="italic">Show All Categories</span>
        </button>
      </nav>
    </div>

    <!-- Views Section -->
    <% has_dive_deeper_content = @gallery_count.to_i > 0 ||
                                  @associations_count.to_i > 0 ||
                                  @collections_count.to_i > 0 ||
                                  @timelines_count.to_i > 0 ||
                                  raw_content.class.name == 'Universe' %>
    <% if has_dive_deeper_content %>
      <div class="px-4 py-4 border-b border-gray-200 dark:border-gray-700">
        <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3">Dive Deeper</h3>
        <nav class="space-y-0.5">
          <!-- Gallery View -->
          <% if @gallery_count && @gallery_count > 0 %>
            <button @click="switchView('gallery')"
                    :class="isViewActive('gallery') ? '<%= content.class_color %> text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700'"
                    class="group flex items-center px-3 py-2 text-sm font-medium rounded-md w-full text-left transition-colors">
              <i class="material-icons text-lg mr-3"
                 :class="isViewActive('gallery') ? 'text-white' : '<%= content.class_text_color %>'">photo_library</i>
              Gallery
              <span class="ml-auto text-xs px-2 py-0.5 rounded-full"
                    :class="isViewActive('gallery') ? 'bg-white bg-opacity-20 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300'">
                <%= @gallery_count %>
              </span>
            </button>
          <% end %>

          <!-- Associations View -->
          <% if @associations_count && @associations_count > 0 %>
            <button @click="switchView('associations')"
                    :class="isViewActive('associations') ? '<%= content.class_color %> text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700'"
                    class="group flex items-center px-3 py-2 text-sm font-medium rounded-md w-full text-left transition-colors">
              <i class="material-icons text-lg mr-3"
                 :class="isViewActive('associations') ? 'text-white' : '<%= content.class_text_color %>'">link</i>
              Associations
              <span class="ml-auto text-xs px-2 py-0.5 rounded-full"
                    :class="isViewActive('associations') ? 'bg-white bg-opacity-20 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300'">
                <%= @associations_count %>
              </span>
            </button>
          <% end %>

          <!-- Collections View -->
          <% if @collections_count && @collections_count > 0 %>
            <button @click="switchView('collections')"
                    :class="isViewActive('collections') ? '<%= content.class_color %> text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700'"
                    class="group flex items-center px-3 py-2 text-sm font-medium rounded-md w-full text-left transition-colors">
              <i class="material-icons text-lg mr-3"
                 :class="isViewActive('collections') ? 'text-white' : '<%= content.class_text_color %>'">collections_bookmark</i>
              Collections
              <span class="ml-auto text-xs px-2 py-0.5 rounded-full"
                    :class="isViewActive('collections') ? 'bg-white bg-opacity-20 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300'">
                <%= @collections_count %>
              </span>
            </button>
          <% end %>

          <!-- Timelines View -->
          <% if @timelines_count && @timelines_count > 0 %>
            <button @click="switchView('timelines')"
                    :class="isViewActive('timelines') ? '<%= content.class_color %> text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700'"
                    class="group flex items-center px-3 py-2 text-sm font-medium rounded-md w-full text-left transition-colors">
              <i class="material-icons text-lg mr-3"
                 :class="isViewActive('timelines') ? 'text-white' : '<%= content.class_text_color %>'">timeline</i>
              Timelines
              <span class="ml-auto text-xs px-2 py-0.5 rounded-full"
                    :class="isViewActive('timelines') ? 'bg-white bg-opacity-20 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300'">
                <%= @timelines_count %>
              </span>
            </button>
          <% end %>

          <!-- Feedback View (Hidden - unreleased feature) -->
          <%# TODO: Unhide when ready to release feedback feature %>
          <% if false %>
            <button @click="switchView('feedback')"
                    :class="isViewActive('feedback') ? '<%= content.class_color %> text-white' : 'text-gray-700 hover:bg-gray-50'"
                    class="group flex items-center px-3 py-2 text-sm font-medium rounded-md w-full text-left transition-colors">
              <i class="material-icons text-lg mr-3"
                 :class="isViewActive('feedback') ? 'text-white' : '<%= content.class_text_color %>'">chat</i>
              Feedback
            </button>
          <% end %>

          <!-- Contributors View (Universe only) -->
          <% if raw_content.class.name == 'Universe' %>
            <button @click="switchView('contributors')"
                    :class="isViewActive('contributors') ? '<%= content.class_color %> text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700'"
                    class="group flex items-center px-3 py-2 text-sm font-medium rounded-md w-full text-left transition-colors">
              <i class="material-icons text-lg mr-3"
                 :class="isViewActive('contributors') ? 'text-white' : 'text-purple-500'">group_add</i>
              Contributors
              <% contributor_count = raw_content.contributors.count rescue 0 %>
              <% if contributor_count > 0 %>
                <span class="ml-auto text-xs px-2 py-0.5 rounded-full"
                      :class="isViewActive('contributors') ? 'bg-white bg-opacity-20 text-white' : 'bg-purple-100 dark:bg-purple-900 text-purple-600 dark:text-purple-200'">
                  <%= contributor_count %>
                </span>
              <% end %>
            </button>
          <% end %>
        </nav>
      </div>
    <% end %>

    <!-- Universe Card -->
    <%= render partial: 'content/shared/universe_card', locals: { raw_content: raw_content } %>

    <!-- Public Stats -->
    <div class="px-4 py-4 border-b border-gray-200 dark:border-gray-700">
      <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3">Page Stats</h3>
      <div class="space-y-3">
        
        <!-- Visibility -->
        <% if raw_content.respond_to?(:privacy) %>
          <%
            # Determine effective visibility
            is_page_public = raw_content.privacy == 'public'
            is_universe_public = raw_content.respond_to?(:universe) &&
                                raw_content.universe.present? &&
                                raw_content.universe.privacy == 'public'
            is_effectively_public = is_page_public || is_universe_public
            can_edit_privacy = raw_content.updatable_by?(current_user)
          %>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600 dark:text-gray-400">Visibility</span>
            <% if can_edit_privacy %>
              <button @click="switchView('privacy')"
                      class="inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium transition-colors hover:bg-gray-100 dark:hover:bg-gray-700 <%= is_effectively_public ? 'bg-green-50 dark:bg-green-900 text-green-700 dark:text-green-200 border border-green-200 dark:border-green-800' : 'bg-gray-50 dark:bg-gray-800 text-gray-700 dark:text-gray-300 border border-gray-200 dark:border-gray-600' %>"
                      title="Click to manage privacy settings">
                <% if is_effectively_public %>
                  <i class="material-icons text-sm mr-1.5">public</i>
                  Public
                  <% if !is_page_public && is_universe_public %>
                    <span class="text-xs text-green-600 dark:text-green-400 ml-1">(via universe)</span>
                  <% end %>
                <% else %>
                  <i class="material-icons text-sm mr-1.5">lock</i>
                  Private
                <% end %>
                <i class="material-icons text-xs ml-1 text-gray-400">edit</i>
              </button>
            <% else %>
              <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium <%= is_effectively_public ? 'bg-green-50 dark:bg-green-900 text-green-700 dark:text-green-200 border border-green-200 dark:border-green-800' : 'bg-gray-50 dark:bg-gray-800 text-gray-700 dark:text-gray-300 border border-gray-200 dark:border-gray-600' %>">
                <% if is_effectively_public %>
                  <i class="material-icons text-sm mr-1.5">public</i>
                  Public
                  <% if !is_page_public && is_universe_public %>
                    <span class="text-xs text-green-600 dark:text-green-400 ml-1">(via universe)</span>
                  <% end %>
                <% else %>
                  <i class="material-icons text-sm mr-1.5">lock</i>
                  Private
                <% end %>
              </span>
            <% end %>
          </div>
        <% end %>
        
        <div class="flex justify-between text-sm">
          <span class="text-gray-600 dark:text-gray-400">Word count</span>
          <span class="font-medium text-gray-900 dark:text-white px-2 py-1 bg-gray-50 dark:bg-gray-700 rounded">
            <%= number_with_delimiter(content.cached_word_count || 0) %>
          </span>
        </div>
      </div>
    </div>

    <!-- Owner Stats -->
    <% if user_signed_in? && raw_content.user_id == current_user.id %>
      <div class="px-4 py-4 border-b border-gray-200 dark:border-gray-700 bg-blue-50 dark:bg-blue-900 bg-opacity-30 dark:bg-opacity-20">
        <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3 flex items-center" title="Only visible to you as the page owner">
          Owner Stats
          <i class="material-icons text-xs text-gray-400 ml-1">lock</i>
        </h3>
        <div class="space-y-3">
          
          <div class="flex justify-between text-sm">
            <span class="text-gray-600 dark:text-gray-400">Created</span>
            <span class="font-medium text-gray-900 dark:text-white" title="<%= raw_content.created_at.strftime('%B %d, %Y at %I:%M %p') %>">
              <%= distance_of_time_in_words(raw_content.created_at, Time.current) %> ago
            </span>
          </div>
          
          <div class="flex justify-between text-sm">
            <span class="text-gray-600 dark:text-gray-400">Last updated</span>
            <span class="font-medium text-gray-900 dark:text-white" title="<%= raw_content.updated_at.strftime('%B %d, %Y at %I:%M %p') %>">
              <%= distance_of_time_in_words(raw_content.updated_at, Time.current) %> ago
            </span>
          </div>
          
          <div class="flex justify-between text-sm">
            <span class="text-gray-600 dark:text-gray-400">Changes</span>
            <%= link_to send("changelog_#{raw_content.class.name.downcase}_path", raw_content), class: "font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 hover:underline px-2 py-1 bg-white dark:bg-gray-800 rounded transition-colors", title: "View changelog" do %>
              <%= number_with_delimiter(raw_content.attribute_change_events.count) %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Bottom Links (Compact) -->
  <div class="flex-shrink-0 px-4 py-4 bg-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
    <div class="space-y-1">
      <!-- Create New Link -->
      <%= link_to new_polymorphic_path(content.raw_model.class), 
                  class: "flex items-center px-2 py-1.5 text-xs text-gray-600 dark:text-gray-400 rounded hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-700 dark:hover:text-gray-200 transition-colors" do %>
        <i class="material-icons text-sm mr-2 text-gray-400">add</i>
        Create <%= content.class_name.downcase %>
      <% end %>
      
      <!-- User's Content Link -->
      <%= link_to send("#{content.class_name.downcase.pluralize}_user_path", content.user), 
                  class: "flex items-center px-2 py-1.5 text-xs text-gray-600 dark:text-gray-400 rounded hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-700 dark:hover:text-gray-200 transition-colors" do %>
        <i class="material-icons text-sm mr-2 text-gray-400">person</i>
        More by <%= content.user.display_name %>
        <i class="material-icons text-xs ml-auto text-gray-400">open_in_new</i>
      <% end %>
    </div>
  </div>
</div>