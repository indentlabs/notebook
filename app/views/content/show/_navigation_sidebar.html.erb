<div class="h-full flex flex-col overflow-hidden">
  <!-- Navigation Content -->
  <div class="flex-1 overflow-y-auto pt-6">
    
    <!-- Categories Section -->
    <div class="px-4 pb-4 border-b border-gray-200">
      <div class="flex items-center justify-between mb-3">
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Categories</h3>
        <button @click="showAllCategories()" 
                :class="isExpandAllActive() ? '<%= content.class_color %> text-white' : 'text-gray-400 hover:text-gray-600'"
                class="p-1 rounded text-xs transition-colors"
                title="Show all categories">
          <i class="material-icons text-sm" 
             :class="isExpandAllActive() ? 'text-white' : ''">unfold_more</i>
        </button>
      </div>
      
      <nav class="space-y-0.5">
        <% content.data[:categories].each do |category| %>
          <% next if category[:label] == 'Gallery' %>
          <% has_content = category[:fields].any? { |field| field[:value].present? } %>
          
          <button @click="showCategory('<%= category[:label] %>')" 
                  :class="isCategoryActive('<%= category[:label] %>') ? '<%= content.class_color %> text-white' : '<%= has_content ? 'text-gray-700 hover:bg-gray-50' : 'text-gray-400' %>'"
                  class="group flex items-center justify-between px-3 py-2 text-sm rounded-md w-full text-left transition-colors">
            <div class="flex items-center">
              <i class="material-icons text-lg mr-3"
                 :class="isCategoryActive('<%= category[:label] %>') ? 'text-white' : '<%= has_content ? content.class_text_color : 'text-gray-400' %>'"><%= category[:icon] %></i>
              <span><%= category[:label] %></span>
            </div>
            <% unless has_content %>
              <span class="text-xs text-gray-400">Empty</span>
            <% end %>
          </button>
        <% end %>
        
        <!-- Show All Categories option -->
        <button @click="showAllCategories()" 
                :class="isExpandAllActive() ? '<%= content.class_color %> text-white' : 'text-gray-500 hover:text-gray-700 hover:bg-gray-50'"
                class="group flex items-center px-3 py-2 text-sm rounded-md w-full text-left transition-colors mt-1">
          <i class="material-icons text-lg mr-3" 
             :class="isExpandAllActive() ? 'text-white opacity-100' : 'opacity-60'">view_agenda</i>
          <span class="italic">Show All Categories</span>
        </button>
      </nav>
    </div>

    <!-- Views Section -->
    <div class="px-4 py-4 border-b border-gray-200">
      <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Dive Deeper</h3>
      <nav class="space-y-0.5">        
        <!-- Gallery View -->
        <button @click="switchView('gallery')" 
                :class="isViewActive('gallery') ? '<%= content.class_color %> text-white' : 'text-gray-700 hover:bg-gray-50'"
                class="group flex items-center px-3 py-2 text-sm font-medium rounded-md w-full text-left transition-colors">
          <i class="material-icons text-lg mr-3" 
             :class="isViewActive('gallery') ? 'text-white' : '<%= content.class_text_color %>'">photo_library</i>
          Gallery
        </button>
        
        <!-- Associations View -->
        <button @click="switchView('associations')" 
                :class="isViewActive('associations') ? '<%= content.class_color %> text-white' : 'text-gray-700 hover:bg-gray-50'"
                class="group flex items-center px-3 py-2 text-sm font-medium rounded-md w-full text-left transition-colors">
          <i class="material-icons text-lg mr-3" 
             :class="isViewActive('associations') ? 'text-white' : '<%= content.class_text_color %>'">link</i>
          Associations
        </button>
        
        <!-- Collections View -->
        <button @click="switchView('collections')" 
                :class="isViewActive('collections') ? '<%= content.class_color %> text-white' : 'text-gray-700 hover:bg-gray-50'"
                class="group flex items-center px-3 py-2 text-sm font-medium rounded-md w-full text-left transition-colors">
          <i class="material-icons text-lg mr-3" 
             :class="isViewActive('collections') ? 'text-white' : '<%= content.class_text_color %>'">collections_bookmark</i>
          Collections
        </button>
        
        <!-- Timelines View -->
        <button @click="switchView('timelines')" 
                :class="isViewActive('timelines') ? '<%= content.class_color %> text-white' : 'text-gray-700 hover:bg-gray-50'"
                class="group flex items-center px-3 py-2 text-sm font-medium rounded-md w-full text-left transition-colors">
          <i class="material-icons text-lg mr-3" 
             :class="isViewActive('timelines') ? 'text-white' : '<%= content.class_text_color %>'">timeline</i>
          Timelines
        </button>
        
        <!-- Feedback View -->
        <button @click="switchView('feedback')" 
                :class="isViewActive('feedback') ? '<%= content.class_color %> text-white' : 'text-gray-700 hover:bg-gray-50'"
                class="group flex items-center px-3 py-2 text-sm font-medium rounded-md w-full text-left transition-colors">
          <i class="material-icons text-lg mr-3" 
             :class="isViewActive('feedback') ? 'text-white' : '<%= content.class_text_color %>'">chat</i>
          Feedback
        </button>
      </nav>
    </div>

    <!-- Universe Card -->
    <% if raw_content.respond_to?(:universe) && raw_content.universe.present? %>
      <div class="px-4 py-4 border-b border-gray-200">
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">In Universe</h3>
        
        <% if raw_content.universe.respond_to?(:first_public_image) && raw_content.universe.first_public_image.present? %>
          <!-- Visual universe card with background image -->
          <%= link_to raw_content.universe, class: "block relative h-24 rounded-lg overflow-hidden group hover:ring-2 hover:ring-blue-500 hover:ring-offset-2 transition-all duration-200" do %>
            <!-- Background image -->
            <%= image_tag raw_content.universe.first_public_image, 
                          class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-200" %>
            
            <!-- Gradient overlay for text readability -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
            
            <!-- Content overlay -->
            <div class="absolute inset-0 p-3 flex flex-col justify-end">
              <div class="flex items-end justify-between">
                <div class="flex-1 min-w-0">
                  <p class="text-white font-semibold text-sm truncate mb-1">
                    <%= raw_content.universe.name %>
                  </p>
                  <p class="text-white/90 text-xs flex items-center">
                    <i class="material-icons text-xs mr-1"><%= Universe.icon %></i>
                    Universe
                  </p>
                </div>
                <i class="material-icons text-white/80 group-hover:text-white text-lg ml-2">chevron_right</i>
              </div>
            </div>
          <% end %>
        <% else %>
          <!-- Fallback card for universes without images -->
          <%= link_to raw_content.universe, class: "block relative h-24 rounded-lg overflow-hidden group hover:ring-2 hover:ring-blue-500 hover:ring-offset-2 transition-all duration-200 #{Universe.color}" do %>
            <!-- Pattern background -->
            <div class="absolute inset-0 opacity-10" style="background-image: url('data:image/svg+xml,%3Csvg width="40" height="40" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.3"%3E%3Cpath d="M20 20c0-5.5-4.5-10-10-10s-10 4.5-10 10 4.5 10 10 10 10-4.5 10-10zm10 0c0-5.5-4.5-10-10-10s-10 4.5-10 10 4.5 10 10 10 10-4.5 10-10z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
            
            <!-- Content -->
            <div class="relative p-3 h-full flex flex-col justify-end">
              <div class="flex items-end justify-between">
                <div class="flex-1 min-w-0">
                  <p class="text-white font-semibold text-sm truncate mb-1">
                    <%= raw_content.universe.name %>
                  </p>
                  <p class="text-white/90 text-xs flex items-center">
                    <i class="material-icons text-xs mr-1"><%= Universe.icon %></i>
                    Universe
                  </p>
                </div>
                <i class="material-icons text-white/80 group-hover:text-white text-lg ml-2">chevron_right</i>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <!-- Public Stats -->
    <div class="px-4 py-4 border-b border-gray-200">
      <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Page Stats</h3>
      <div class="space-y-3">
        
        <!-- Visibility (first and clickable) -->
        <% if raw_content.respond_to?(:privacy) %>
          <%
            # Determine effective visibility
            is_page_public = raw_content.privacy == 'public'
            is_universe_public = raw_content.respond_to?(:universe) && 
                                raw_content.universe.present? && 
                                raw_content.universe.privacy == 'public'
            is_effectively_public = is_page_public || is_universe_public
          %>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Visibility</span>
            <button @click="switchView('privacy')" class="inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium transition-colors hover:bg-gray-100 <%= is_effectively_public ? 'bg-green-50 text-green-700 border border-green-200' : 'bg-gray-50 text-gray-700 border border-gray-200' %>"
                    title="Click to manage privacy settings">
              <% if is_effectively_public %>
                <i class="material-icons text-sm mr-1.5">public</i>
                Public
                <% if !is_page_public && is_universe_public %>
                  <span class="text-xs text-green-600 ml-1">(via universe)</span>
                <% end %>
              <% else %>
                <i class="material-icons text-sm mr-1.5">lock</i>
                Private
              <% end %>
              <i class="material-icons text-xs ml-1 text-gray-400">edit</i>
            </button>
          </div>
        <% end %>
        
        <div class="flex justify-between text-sm">
          <span class="text-gray-600">Word count</span>
          <span class="font-medium text-gray-900 px-2 py-1 bg-gray-50 rounded">
            <%= number_with_delimiter(content.cached_word_count || 0) %>
          </span>
        </div>
      </div>
    </div>

    <!-- Owner Stats -->
    <% if user_signed_in? && raw_content.user_id == current_user.id %>
      <div class="px-4 py-4 border-b border-gray-200 bg-blue-50 bg-opacity-30">
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3 flex items-center" title="Only visible to you as the page owner">
          Owner Stats
          <i class="material-icons text-xs text-gray-400 ml-1">lock</i>
        </h3>
        <div class="space-y-3">
          
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">Created</span>
            <span class="font-medium text-gray-900" title="<%= raw_content.created_at.strftime('%B %d, %Y at %I:%M %p') %>">
              <%= distance_of_time_in_words(raw_content.created_at, Time.current) %> ago
            </span>
          </div>
          
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">Last updated</span>
            <span class="font-medium text-gray-900" title="<%= raw_content.updated_at.strftime('%B %d, %Y at %I:%M %p') %>">
              <%= distance_of_time_in_words(raw_content.updated_at, Time.current) %> ago
            </span>
          </div>
          
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">Changes</span>
            <%= link_to send("changelog_#{raw_content.class.name.downcase}_path", raw_content), class: "font-medium text-blue-600 hover:text-blue-700 hover:underline px-2 py-1 bg-white rounded transition-colors", title: "View changelog" do %>
              <%= number_with_delimiter(raw_content.attribute_change_events.count) %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Bottom Links (Compact) -->
  <div class="flex-shrink-0 px-4 py-4 bg-gray-50 border-t border-gray-200">
    <div class="space-y-1">
      <!-- Create New Link -->
      <%= link_to new_polymorphic_path(content.raw_model.class), 
                  class: "flex items-center px-2 py-1.5 text-xs text-gray-600 rounded hover:bg-gray-100 hover:text-gray-700 transition-colors" do %>
        <i class="material-icons text-sm mr-2 text-gray-400">add</i>
        Create <%= content.class_name.downcase %>
      <% end %>
      
      <!-- User's Content Link -->
      <%= link_to send("#{content.class_name.downcase.pluralize}_user_path", content.user), 
                  class: "flex items-center px-2 py-1.5 text-xs text-gray-600 rounded hover:bg-gray-100 hover:text-gray-700 transition-colors" do %>
        <i class="material-icons text-sm mr-2 text-gray-400">person</i>
        More by <%= content.user.display_name %>
        <i class="material-icons text-xs ml-auto text-gray-400">open_in_new</i>
      <% end %>
    </div>
  </div>
</div>