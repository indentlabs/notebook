<%
  # Only show contributors panel for Universe content types
  return unless raw_content.class.name == 'Universe'
  
  # Get current contributors for this universe
  contributors = raw_content.contributors.includes(:user) rescue []
  is_owner = user_signed_in? && raw_content.user_id == current_user.id
  is_contributor = user_signed_in? && contributors.pluck(:user_id).include?(current_user.id)
%>

<div class="max-w-4xl mx-auto space-y-6">
  
  <!-- Flash Messages -->
  <% if flash[:notice].present? %>
    <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-center">
      <i class="material-icons text-green-600 mr-2">check_circle</i>
      <%= flash[:notice] %>
    </div>
  <% end %>
  
  <% if flash[:alert].present? %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-center">
      <i class="material-icons text-red-600 mr-2">error</i>
      <%= flash[:alert] %>
    </div>
  <% end %>
  
  <% if is_owner %>
    <!-- Current Contributors Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <i class="material-icons text-purple-500 mr-2">group</i>
          Current Contributors
        </h3>
        <span class="text-sm text-gray-500">
          <%= contributors.count %> <%= 'contributor'.pluralize(contributors.count) %>
        </span>
      </div>
      
      <% if contributors.any? %>
        <div class="space-y-3 mb-4">
          <% contributors.each do |contributor| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-purple-500 rounded-full flex items-center justify-center">
                  <i class="material-icons text-white text-sm">person</i>
                </div>
                <div class="ml-3">
                  <div class="text-sm font-medium text-gray-900">
                    <%= contributor.user&.display_name || contributor.email %>
                  </div>
                  <div class="text-xs text-gray-500">
                    <% if contributor.user.present? %>
                      Can edit all content in this universe
                    <% else %>
                      Invitation pending
                    <% end %>
                  </div>
                </div>
              </div>
              
              <%= button_to remove_contributor_path(contributor.id),
                          method: :delete,
                          form: { 
                            class: "inline-block",
                            onsubmit: "return confirm('Remove #{contributor.user&.display_name || contributor.email} as a contributor?\\n\\nThey will lose access to all content in this universe.');"
                          },
                          class: "text-red-500 hover:bg-red-50 p-2 rounded transition-colors",
                          data: { turbo: false } do %>
                <i class="material-icons text-sm">remove_circle</i>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8 bg-gray-50 rounded-lg">
          <i class="material-icons text-4xl text-gray-400 mb-2">group_add</i>
          <p class="text-gray-600">No contributors yet</p>
          <p class="text-sm text-gray-500 mt-1">Add collaborators to work on this universe together</p>
        </div>
      <% end %>
    </div>
    
    <!-- Add New Contributor Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <i class="material-icons text-purple-500 mr-2">person_add</i>
        Add New Contributor
      </h3>
      
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
        <div class="flex">
          <i class="material-icons text-blue-600 text-sm mr-2 mt-0.5">info</i>
          <div class="text-sm text-blue-800">
            <p class="font-medium mb-1">About Contributors</p>
            <ul class="space-y-1 text-xs">
              <li class="flex items-start">
                <span class="mr-1">•</span>
                <span>Contributors can edit all content within this universe</span>
              </li>
              <li class="flex items-start">
                <span class="mr-1">•</span>
                <span>They cannot delete the universe or manage other contributors</span>
              </li>
              <li class="flex items-start">
                <span class="mr-1">•</span>
                <span>Users without accounts will receive an invitation email</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
      
      <%= form_with url: universe_contributors_path(raw_content), 
                    local: true,
                    html: { class: "space-y-4" } do |f| %>
        <div class="flex gap-3">
          <div class="flex-1">
            <input type="email"
                   name="contributor[email]"
                   placeholder="Enter email address"
                   required
                   autocomplete="off"
                   autocorrect="off"
                   autocapitalize="off"
                   spellcheck="false"
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
          </div>
          <button type="submit"
                  class="inline-flex items-center px-4 py-2 bg-purple-600 text-white border border-purple-600 rounded-lg text-sm font-medium hover:bg-purple-700 transition-colors">
            <i class="material-icons text-sm mr-2">person_add</i>
            Add Contributor
          </button>
        </div>
      <% end %>
    </div>
    
  <% elsif is_contributor %>
    <!-- Contributor View - Can only leave -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <div class="flex items-start">
          <i class="material-icons text-yellow-600 mr-3 mt-0.5">info</i>
          <div>
            <h4 class="text-sm font-medium text-yellow-900 mb-2">You are a contributor</h4>
            <p class="text-sm text-yellow-800 mb-3">
              You have been invited to collaborate on this universe. You can edit all content within it, 
              but cannot manage other contributors.
            </p>
            <p class="text-sm text-yellow-800 mb-4">
              If you leave this universe, you will lose access to all its content and will need to be 
              reinvited to regain access.
            </p>
            
            <% my_contributor = contributors.find { |c| c.user_id == current_user.id } %>
            <% if my_contributor %>
              <%= button_to remove_contributor_path(my_contributor.id),
                          method: :delete,
                          form: {
                            onsubmit: "return confirm('Are you sure you want to leave this universe?\\n\\nYou will lose access to all its content and will need to be reinvited to regain access.');"
                          },
                          class: "inline-flex items-center px-4 py-2 bg-red-600 text-white border border-red-600 rounded text-sm font-medium hover:bg-red-700 transition-colors",
                          data: { turbo: false } do %>
                <i class="material-icons text-sm mr-2">exit_to_app</i>
                Leave Universe
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Show Other Contributors -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <i class="material-icons text-purple-500 mr-2">group</i>
        Other Contributors
      </h3>
      
      <% other_contributors = contributors.reject { |c| c.user_id == current_user.id } %>
      <% if other_contributors.any? %>
        <div class="space-y-3">
          <% other_contributors.each do |contributor| %>
            <div class="flex items-center p-3 bg-gray-50 rounded-lg">
              <div class="w-10 h-10 bg-purple-500 rounded-full flex items-center justify-center">
                <i class="material-icons text-white text-sm">person</i>
              </div>
              <div class="ml-3">
                <div class="text-sm font-medium text-gray-900">
                  <%= contributor.user&.display_name || contributor.email %>
                </div>
                <div class="text-xs text-gray-500">
                  <% if contributor.user.present? %>
                    Collaborator
                  <% else %>
                    Invitation pending
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">No other contributors</p>
      <% end %>
    </div>
  <% end %>
  
  <!-- Universe Owner Info -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <i class="material-icons text-purple-500 mr-2">star</i>
      Universe Owner
    </h3>
    
    <div class="flex items-center">
      <div class="w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center">
        <i class="material-icons text-white">person</i>
      </div>
      <div class="ml-3">
        <div class="font-medium text-gray-900">
          <%= raw_content.user.display_name %>
        </div>
        <div class="text-sm text-gray-500">
          Created this universe and has full control
        </div>
      </div>
    </div>
  </div>
</div>