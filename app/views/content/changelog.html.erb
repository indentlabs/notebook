<!-- Beautiful Changelog Page -->
<div class="min-h-screen bg-gray-50 dark:bg-gray-900">

  <!-- Header with breadcrumbs and actions -->
  <%= render partial: 'content/header', locals: {
    content: @serialized_content,
    show_edit_controls: true,
    current_page: :changelog
  } %>

  <!-- Spacer for fixed breadcrumb header (~40px) -->
  <div class="pt-10">
    <!-- Original Stats Header (below the breadcrumb/nav header) -->
    <%= render partial: 'content/changelog/header' %>
  
    <!-- Main Timeline -->
    <%= render partial: 'content/changelog/timeline' %>
  </div>

</div>

<!-- Include Alpine.js for interactivity -->
<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>