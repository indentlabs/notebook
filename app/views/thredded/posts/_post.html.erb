<% 
  post, content = post_and_content if local_assigns.key?(:post_and_content) 
  blocked_post  = user_signed_in? && post.user.present? && post.user.blocked_by?(current_user)
%>

<% unless blocked_post %>
  <%= render 'thredded/posts_common/before_first_unread_post', post: post if post.first_unread_in_page? %>
  
  <%= content_tag :article, 
                  id: dom_id(post), 
                  class: ["thredded--post", "thredded--#{post.read_state}--post", "mb-6"] do %>
    
    <!-- Notebook Entry Layout -->
    <div class="relative group mb-8">
      <!-- Message Card -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden transition-all duration-200 hover:shadow-md
                  <%= post.user&.favorite_page_type? ? "border-l-4 #{content_class_from_name(post.user.favorite_page_type).color.gsub('text-', 'border-')}" : 'border-l-4 border-gray-300 dark:border-gray-600' %>">
        
        <!-- Entry Header -->
        <div class="px-6 pt-5 pb-2 flex items-start justify-between">
          <div class="flex items-start gap-4">
            <!-- Avatar -->
            <% if post.user %>
              <div class="relative mt-1">
                <%= image_tag post.user.image_url(80), 
                    class: 'h-12 w-12 rounded-full border border-gray-100 dark:border-gray-700 shadow-sm object-cover' %>
                
                <% if post.user.favorite_page_type? %>
                  <%= link_to main_app.send("#{post.user.favorite_page_type.downcase.pluralize}_user_path", { id: post.user.id }) do %>
                    <span class="absolute -bottom-1 -right-1 block bg-white dark:bg-gray-800 rounded-full p-0.5">
                      <span class="block h-5 w-5 rounded-full text-center <%= content_class_from_name(post.user.favorite_page_type).color %> border border-gray-100 dark:border-gray-700 flex items-center justify-center shadow-sm">
                        <i class="material-icons text-[10px] text-white"><%= content_class_from_name(post.user.favorite_page_type).icon %></i>
                      </span>
                    </span>
                  <% end %>
                <% end %>
              </div>
              
              <div>
                <!-- Name -->
                <div class="flex items-center">
                  <span class="font-bold text-lg text-gray-900 dark:text-gray-100 tracking-tight leading-tight">
                    <%= user_link post.user %>
                  </span>
                </div>
                
                <!-- Byline: Badges & Date -->
                <div class="flex flex-wrap items-center gap-x-2 gap-y-1 mt-1 text-xs text-gray-500 dark:text-gray-400 font-medium">
                  <% if post.user.forum_moderator? %>
                    <span class="text-purple-600 dark:text-purple-400 uppercase tracking-wider flex items-center">
                      <i class="material-icons text-[10px] mr-1">verified_user</i>
                      Moderator
                    </span>
                    <span class="text-gray-300 dark:text-gray-600">•</span>
                  <% end %>
                  
                  <% if post.user.on_premium_plan? && post.user.forums_badge_text.present? %>
                    <span class="text-blue-600 dark:text-blue-400 uppercase tracking-wider">
                      <%= post.user.forums_badge_text %>
                    </span>
                    <span class="text-gray-300 dark:text-gray-600">•</span>
                  <% end %>

                  <a href="<%= post.permalink_path %>" rel="nofollow" class="hover:text-gray-700 dark:hover:text-gray-300 transition-colors">
                    <%= time_ago post.created_at %>
                  </a>
                </div>
              </div>
            <% else %>
              <!-- Deleted User Handling -->
              <div class="h-12 w-12 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center mt-1">
                <i class="material-icons text-gray-400">person_off</i>
              </div>
              <div>
                <span class="font-bold text-lg text-gray-500">Deleted User</span>
              </div>
            <% end %>
          </div>
          
          <!-- Post Actions (Top Right) -->
          <div class="flex items-center opacity-0 group-hover:opacity-100 transition-opacity duration-200">
            <%= render 'thredded/posts_common/actions', post: post, actions: local_assigns[:actions] %>
          </div>
        </div>

        <!-- Message Content -->
        <div class="px-6 py-3 pb-6">
          <div class="prose prose-stone dark:prose-invert max-w-none text-gray-800 dark:text-gray-200 leading-relaxed text-base">
            <%= ForumReplacementService.replace_for(content, current_user) || render('thredded/posts/content', post: post) %>
          </div>
          
          <!-- Moderation Notices -->
          <% if post.pending_moderation? && !Thredded.content_visible_while_pending_moderation %>
            <div class="mt-6 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-700 rounded-md p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <i class="material-icons text-yellow-400 text-base">pending</i>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-yellow-800 dark:text-yellow-200 font-medium">
                    <%= t 'thredded.posts.pending_moderation_notice' %>
                  </p>
                </div>
              </div>
            </div>
          <% elsif post.blocked? && post.can_moderate? %>
            <div class="mt-6 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-700 rounded-md p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <i class="material-icons text-red-400 text-base">block</i>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-red-800 dark:text-red-200 font-medium">
                    <%= render 'thredded/shared/content_moderation_blocked_state', moderation_record: post.last_moderation_record %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Footer (Stats only, actions moved to top) -->
        <% if defined?(post_counter) && post_counter == 0 %>
          <div class="px-6 py-3 bg-gray-50/50 dark:bg-gray-900/30 border-t border-gray-100 dark:border-gray-700/50">
            <div class="flex items-center text-xs font-medium text-gray-500 dark:text-gray-400 gap-6">
              <span class="flex items-center" title="Views">
                <i class="material-icons text-sm mr-2 opacity-60">visibility</i>
                <%= number_with_delimiter(post.topic.views_count) %>
              </span>
              <span class="flex items-center" title="Replies">
                <i class="material-icons text-sm mr-2 opacity-60">forum</i>
                <%= post.topic.posts_count - 1 %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>