<% preferences.messageboard_groups.each do |group| %>
  <div class="mb-6">
    <h3 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-3">
      <%= group.name %>
    </h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
      <%= render partial: 'thredded/preferences/messageboards_nav_item',
                 collection: group.messageboards,
                 as: :messageboard %>
    </div>
  </div>
<% end %>