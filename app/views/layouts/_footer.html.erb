<footer class="page-footer light-blue">

  <% if user_signed_in? %>
    <div class="fixed-action-btn" style="bottom: 25px; right: 24px;">
      <a class="btn-floating btn-large blue-grey">
        <i class="large material-icons">add</i>
      </a>
      <ul>
        <% current_user.user_content_type_activators.pluck(:content_type).reverse.each do |content_type_string| %>
          <% content_type = content_type_string.constantize %>
          <% next unless current_user.can_create?(content_type) %>
          <li>
            <%= link_to new_polymorphic_path(content_type), class: "btn-floating #{content_type.color}" do %>
              <i class="material-icons tooltipped" data-position="left" data-tooltip="New <%= content_type.name %>">
                <%= content_type.icon %>
              </i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

