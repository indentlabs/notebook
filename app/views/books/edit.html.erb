<!-- JavaScript for drag-and-drop sorting -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const list = document.getElementById('book-documents-list');
  if (!list) return;

  // Update all position numbers to match current order
  function updatePositionNumbers() {
    const items = list.querySelectorAll('li');
    items.forEach((item, index) => {
      const positionNumber = item.querySelector('.position-number');
      if (positionNumber) {
        positionNumber.textContent = index + 1;
      }
    });
  }

  // Check if jQuery UI Sortable is available
  if (typeof $ !== 'undefined' && $.fn.sortable) {
    $(list).sortable({
      handle: '.drag-handle',
      placeholder: 'bg-emerald-50 dark:bg-emerald-900 border-2 border-dashed border-emerald-300 dark:border-emerald-600 rounded-lg',
      update: function(event, ui) {
        const bookDocumentId = ui.item.data('book-document-id');
        const newPosition = ui.item.index();

        fetch('<%= sort_document_book_path(@book) %>', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
          },
          body: JSON.stringify({
            book_document_id: bookDocumentId,
            position: newPosition
          })
        }).then(() => {
          updatePositionNumbers();
        }).catch(error => {
          console.error('Error sorting:', error);
          $(list).sortable('cancel');
        });
      }
    });
  }
});
</script>
