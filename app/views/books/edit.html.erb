        </div>

      <% end %>
    </div>

    <!-- Actions -->
    <div class="p-6 border-t border-gray-200 dark:border-gray-700 space-y-3">
      <% if @book.archived? %>
        <%= button_to toggle_archive_book_path(@book), method: :post, class: "w-full inline-flex justify-center items-center px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600" do %>
          <i class="material-icons text-lg mr-2">unarchive</i>
          Unarchive Book
        <% end %>
