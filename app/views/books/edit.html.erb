         role="dialog"
         aria-modal="true"
         aria-labelledby="mobile-sidebar-title">

    <!-- Header with clickable toggle -->
    <div class="p-3 border-b border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 lg:hidden">
      <button @click="showLeftSidebar = false"
              class="flex items-center hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors p-1.5 -ml-1.5"
              aria-label="Close Book Details">
        <i class="material-icons text-gray-500 text-lg mr-1">chevron_left</i>
        <i class="material-icons text-gray-600 text-lg mr-1.5">menu_book</i>
        <h2 id="mobile-sidebar-title" class="text-sm font-semibold text-gray-900 dark:text-white">Book Details</h2>
      </button>
    </div>

    <div class="flex-1 overflow-y-auto p-6 space-y-6">
      <%= form_with model: @book, local: false, html: { class: 'space-y-6' } do |f| %>

        <!-- Title -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Title</label>
          <%= f.text_field :title, class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white js-autosave" %>
        </div>

        <!-- Subtitle -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Subtitle</label>
          <%= f.text_field :subtitle, class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white js-autosave", placeholder: "Optional subtitle" %>
        </div>

        <!-- Status -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
          <%= f.select :status, status_options, {}, class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white js-autosave" %>
        </div>

        <!-- Description -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Description</label>
          <%= f.text_area :description, rows: 3, class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white resize-none js-autosave", placeholder: "What's this book about?" %>
        </div>

        <!-- Blurb -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Back Cover Blurb</label>
          <%= f.text_area :blurb, rows: 4, class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white resize-none js-autosave", placeholder: "The hook for readers..." %>
        </div>

        <!-- Universe -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Universe</label>
          <%= f.collection_select :universe_id, current_user.universes.order(:name), :id, :name, { include_blank: 'No universe' }, class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white js-autosave" %>
        </div>

      <% end %>
    </div>

    <!-- Actions -->
    <div class="p-6 border-t border-gray-200 dark:border-gray-700 space-y-3">
      <% if @book.archived? %>
        <%= button_to toggle_archive_book_path(@book), method: :post, class: "w-full inline-flex justify-center items-center px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600" do %>
          <i class="material-icons text-lg mr-2">unarchive</i>
          Unarchive Book
        <% end %>
      <% else %>
        <%= button_to toggle_archive_book_path(@book), method: :post, class: "w-full inline-flex justify-center items-center px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600" do %>
          <i class="material-icons text-lg mr-2">archive</i>
          Archive Book
        <% end %>
      <% end %>

      <%= button_to book_path(@book), method: :delete, data: { confirm: 'Are you sure you want to delete this book? This cannot be undone.' }, class: "w-full inline-flex justify-center items-center px-4 py-2 text-sm font-medium text-red-600 dark:text-red-400 bg-white dark:bg-gray-700 border border-red-300 dark:border-red-600 rounded-lg hover:bg-red-50 dark:hover:bg-red-900" do %>
        <i class="material-icons text-lg mr-2">delete</i>
        Delete Book
      <% end %>
    </div>
  </aside>

  <!-- Desktop Left Sidebar -->
  <aside x-show="showLeftSidebar && isDesktop" x-cloak
         x-transition:enter="transform transition ease-in-out duration-200"
         x-transition:enter-start="-translate-x-full"
         x-transition:enter-end="translate-x-0"
         x-transition:leave="transform transition ease-in-out duration-200"
         x-transition:leave-start="translate-x-0"
         x-transition:leave-end="-translate-x-full"
         class="hidden lg:flex w-80 bg-white dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 flex-shrink-0 flex-col order-1 max-h-screen overflow-hidden">

    <!-- Header with clickable toggle -->
    <div class="hidden lg:flex items-center justify-between p-3 border-b border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800">
      <button @click="toggleLeftSidebar()"
              class="flex items-center hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors p-1.5 -ml-1.5"
              title="Hide Book Details"
              aria-label="Hide Book Details">
        <i class="material-icons text-gray-500 text-lg mr-1">chevron_left</i>
        <i class="material-icons text-gray-600 text-lg mr-1.5">menu_book</i>
        <h2 class="text-sm font-semibold text-gray-900 dark:text-white">Book Details</h2>
      </button>
    </div>

    <div class="flex-1 overflow-y-auto p-6 space-y-6">
      <%= form_with model: @book, local: false, html: { class: 'space-y-6' } do |f| %>

        <!-- Title -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Title</label>
          <%= f.text_field :title, class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white js-autosave" %>
        </div>

        <!-- Subtitle -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Subtitle</label>
          <%= f.text_field :subtitle, class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white js-autosave", placeholder: "Optional subtitle" %>
        </div>

        <!-- Status -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
          <%= f.select :status, status_options, {}, class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white js-autosave" %>
