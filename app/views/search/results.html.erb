      <main class="lg:col-span-13 xl:col-span-10">
        <div class="px-4 sm:px-0">
          <div class="sm:hidden">
            <label for="question-tabs" class="sr-only">Select a tab</label>
            <select id="question-tabs" class="block w-full rounded-md border-gray-300 text-base font-medium text-gray-900 shadow-sm focus:border-rose-500 focus:ring-rose-500">
              <option selected>Best Match</option>

              <option>Most Recent</option>

              <option>Oldest</option>
            </select>
          </div>
          <div class="hidden sm:block">
            <nav class="relative z-0 rounded-lg shadow flex divide-x divide-gray-200" aria-label="Tabs">
              <!-- Current: "text-gray-900", Default: "text-gray-500 hover:text-gray-700" -->
              <a href="#" aria-current="page" class="text-gray-900 rounded-l-lg group relative min-w-0 flex-1 overflow-hidden bg-white py-4 px-6 text-sm font-medium text-center hover:bg-gray-50 focus:z-10">
                <span>Best Match</span>
                <span aria-hidden="true" class="bg-rose-500 absolute inset-x-0 bottom-0 h-0.5"></span>
              </a>

              <a href="#" class="text-gray-500 hover:text-gray-700 group relative min-w-0 flex-1 overflow-hidden bg-white py-4 px-6 text-sm font-medium text-center hover:bg-gray-50 focus:z-10">
                <span>Most Recent</span>
                <span aria-hidden="true" class="bg-transparent absolute inset-x-0 bottom-0 h-0.5"></span>
              </a>

              <a href="#" class="text-gray-500 hover:text-gray-700 rounded-r-lg group relative min-w-0 flex-1 overflow-hidden bg-white py-4 px-6 text-sm font-medium text-center hover:bg-gray-50 focus:z-10">
                <span>Oldest</span>
                <span aria-hidden="true" class="bg-transparent absolute inset-x-0 bottom-0 h-0.5"></span>
              </a>
            </nav>
          </div>
        </div>
        <div class="mt-4">
          <h1 class="sr-only">Search results</h1>
          <ul role="list" class="space-y-4">

            <% if @matched_attributes.empty? %>
              <div class="relative block w-full border-2 border-gray-300 border-dashed rounded-lg p-12 text-center">
                <i class="material-icons text-6xl text-gray-300">search</i>
                <span class="mt-2 block text-sm font-medium text-gray-900">No results found</span>
              </div>
            <% end %>

            <% @matched_attributes.each do |attribute| %>
              <%
                seen_key = "#{attribute.entity_type}-#{attribute.entity_id}"
                next if @seen_result_pages.key?(seen_key)
                @seen_result_pages[seen_key] = true
              %>

              <%
                entity = @current_user_content.fetch(attribute.entity_type, []).find { |e| e.id == attribute.entity_id }
                next unless entity
              %>

              <li class="bg-white px-4 py-6 shadow sm:p-6 sm:rounded-lg hover:shadow-lg">
                <%= link_to entity.view_path do %>
                  <article>
                    <div class="flex flex-nowrap space-x-4">
                      <div class="bg-notebook-blue rounded">
                        <%= image_tag entity.random_image_including_private, class: 'max-w-md rounded' %>
                      </div>
                      <div class="flex-grow p-4">
                        <h2 class="mt-4 text-base font-medium text-gray-900">
                          <i class="material-icons <%= entity.text_color %> float-left mr-2"><%= entity.icon %></i>
                          <%= entity.name %>
                        </h2>
                        <div class="font-bold text-sm text-gray-900 my-4">
                          <%= attribute.attribute_field.label %>:
                        </div>
                        <p>
                          <%=
                            ContentFormatterService.show(
                              text: truncate(attribute.value, length: 180, separator: ' '),
                              viewing_user: current_user
                            ).gsub(
                              /#{@query}/i,
                              "<span class='bg-yellow-300 p-1 text-black'>#{@query}</span>".html_safe
                            ).gsub("<p>", ' ').gsub("</p>", ' ').html_safe
                          %>
                        </p>
                      </div>
                    </div>
                  </article>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </main>
    </div>
  </div>
</div>
