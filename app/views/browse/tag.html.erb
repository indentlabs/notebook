<!-- Modal structure - defined before the content so it's available immediately -->
<div id="how-to-join-modal" class="modal modal-how-to-join">
  <div class="modal-content">
    <h4><i class="material-icons <%= @accent_color %>-text left" style="margin-right: 10px;">info</i> How to join this showcase</h4>
    <p>Want your content to appear on this page? Follow these steps:</p>
    <ol>
      <li>Add the <span class="highlight">ArtFight2025</span> tag to your content</li>
      <li>Set your content's privacy to <span class="highlight">Public</span> in the privacy toggle</li>
      <li>That's it! Your content will appear here automatically</li>
    </ol>
    <p class="grey-text" style="font-size: 14px;">Note: It may take a few minutes for new content to appear.</p>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-close waves-effect waves-light <%= @accent_color %> btn-flat white-text">Got it</a>
  </div>
</div>

<div class="row">
  <!-- Privacy text in top right -->
  <div class="col s12">
    <div class="grey-text text-darken-1" style="margin: 8px 0; font-size: 0.85rem; text-align: right;">
      <i class="material-icons tiny" style="position: relative; top: 2px;">lock_open</i>
      All content on Notebook.ai is private by default. Only pages with the <strong>ArtFight2025</strong> tag <em>and</em> set to <strong>public</strong> appear here.
    </div>
  </div>
  
  <div class="col s12">
    <% 
      # Generate a consistent pattern for the background based on tag name
      pattern_seed = 5 # Fixed for ArtFight tag
      pattern_url = asset_path("card-headers/patterns/pattern#{pattern_seed}.png")
      
      # Calculate total items for the stats display
      total_items = @tagged_content.sum { |group| group[:content].count }
      content_types_count = @tagged_content.size
      creators_count = @tagged_content.flat_map { |group| group[:content].map(&:user_id) }.uniq.count
    %>
    
    <!-- Enhanced hero header -->
    <div class="card z-depth-2" style="border-radius: 8px; overflow: hidden; margin-bottom: 30px;">
      <div class="<%= @accent_color %> darken-1" style="position: relative; background: url('<%= pattern_url %>') center center; background-size: cover; height: 220px;">
        <!-- Gradient overlay for better text contrast -->
        <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.1) 100%);"></div>
        
        <!-- Help button for how to join -->
        <div class="help-tooltip-container" style="position: absolute; top: 20px; right: 20px; z-index: 10;">
          <button class="btn-floating white z-depth-2 pulse modal-trigger" id="how-to-join-btn" style="height: 42px; width: 42px; display: flex; align-items: center; justify-content: center; cursor: pointer; border: none;" data-target="how-to-join-modal">
            <i class="material-icons <%= @accent_color %>-text">help_outline</i>
          </button>
        </div>
        
        <!-- Art Fight 2025 header info -->
        <div style="position: absolute; top: 40px; left: 40px; z-index: 1; max-width: 60%;">
          <div>
            <h1 style="font-size: 38px; font-weight: 600; text-shadow: 0 2px 4px rgba(0,0,0,0.4); line-height: 1.2; margin: 0 0 8px 0; color: white;">
              Art Fight 2025
            </h1>
            <h2 style="font-size: 18px; text-shadow: 0 1px 3px rgba(0,0,0,0.4); font-weight: 400; margin: 0; color: white; margin-top: 8px; margin-bottom: 15px;">
              A showcase of creators' public content across Notebook.ai
            </h2>
            
            <!-- Stats chips in header instead of below -->
            <div style="display: flex; flex-wrap: wrap; gap: 10px; margin-top: 20px;">
              <div class="chip z-depth-1 white" style="border: none; margin: 0; font-weight: 500;">
                <i class="material-icons left <%= @accent_color %>-text"><%= PageTag.icon %></i>
                <%= pluralize(total_items, 'page') %>
              </div>
              
              <div class="chip z-depth-1 white" style="border: none; margin: 0; font-weight: 500;">
                <i class="material-icons left <%= @accent_color %>-text">category</i>
                <%= pluralize(content_types_count, 'category') %>
              </div>
              
              <div class="chip z-depth-1 white" style="border: none; margin: 0; font-weight: 500;">
                <i class="material-icons left <%= @accent_color %>-text">people</i>
                <%= pluralize(creators_count, 'creator') %>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Tag floating badge moved to right side -->
        <div style="position: absolute; bottom: 30px; right: 40px; z-index: 2;">
          <div style="display: inline-block; background-color: white; padding: 14px 22px; border-radius: 8px; box-shadow: 0 4px 15px 0 rgba(0,0,0,0.3);">
            <div style="display: flex; align-items: center;">
              <i class="material-icons <%= @accent_color %>-text" style="font-size: 32px; margin-right: 12px;"><%= PageTag.icon %></i>
              <span style="font-size: 28px; font-weight: 600;" class="<%= @accent_color %>-text"><%= @tag %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Category quick filters -->
  <div class="col s12">
    <div class="category-filters z-depth-1" style="background-color: #fff; border-radius: 8px; padding: 16px; margin-bottom: 25px;">
      <div class="category-filter-title" style="margin-bottom: 10px; display: flex; align-items: center;">
        <i class="material-icons <%= @accent_color %>-text" style="margin-right: 8px;">filter_list</i>
        <span style="font-weight: 500; font-size: 16px;">Filter by category:</span>
      </div>
      
      <div style="display: flex; flex-wrap: wrap; gap: 8px;">
        <a href="#all" class="category-filter active" style="padding: 6px 12px; border-radius: 4px; background-color: #f5f5f5; text-decoration: none; color: #333; font-weight: 500; transition: all 0.2s ease; display: flex; align-items: center;">
          <i class="material-icons <%= @accent_color %>-text left" style="font-size: 18px; margin-right: 6px;">layers</i>
          All (<%= total_items %>)
        </a>
        
        <% @tagged_content.each do |content_group| %>
          <a href="#<%= content_group[:type].downcase %>" class="category-filter" style="padding: 6px 12px; border-radius: 4px; background-color: #f5f5f5; text-decoration: none; color: #333; transition: all 0.2s ease; display: flex; align-items: center;">
            <i class="material-icons <%= content_group[:color] %>-text left" style="font-size: 18px; margin-right: 6px;"><%= content_group[:icon] %></i>
            <%= content_group[:type].pluralize %> (<%= content_group[:content].count %>)
          </a>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="col s12">
    <% if @tagged_content.empty? %>
      <div class="center-align" style="margin-top: 80px;">
        <h5 class="grey-text">No public content with this tag</h5>
        <p class="grey-text">
          No one has created any public content with the "<%= @tag %>" tag yet.
        </p>
      </div>
    <% else %>
      <% @tagged_content.each do |content_group| %>
        <div id="<%= content_group[:type].downcase %>" class="section content-section">
          <div class="content-section-header" style="display: flex; align-items: center; margin-bottom: 20px; border-bottom: 2px solid #f0f0f0; padding-bottom: 10px;">
            <i class="material-icons <%= content_group[:color] %>-text" style="font-size: 28px; margin-right: 10px;"><%= content_group[:icon] %></i>
            <h4 style="font-size: 24px; font-weight: 500; margin: 0;" class="<%= content_group[:color] %>-text">
              <%= content_group[:type].pluralize %> 
              <span class="grey-text" style="font-size: 18px; font-weight: 400;">(<%= content_group[:content].count %>)</span>
            </h4>
          </div>
          
          <div class="row js-content-cards-list">
            <% content_group[:content].each do |content| %>
              <div class="col s12 m6 l4 xl3 js-content-card-container" style="margin-bottom: 20px;">
                <div class="hoverable card sticky-action z-depth-1" style="margin-bottom: 20px; border-radius: 8px; overflow: hidden;">
                  <!-- Color indicator bar at top of card -->
                  <div style="height: 4px; background-color: <%= content_group[:color] == 'grey' ? '#9e9e9e' : "var(--#{content_group[:color]})" %>;"></div>
                  
                  <div class="card-image waves-effect waves-block waves-light">
                    <% 
                      # Find image for this content
                      content_image = @random_image_pool_cache.fetch([content.class.name, content.id], [])
                        .sample
                        .try(:src, :medium)

                      if @saved_basil_commissions
                        content_image ||= @saved_basil_commissions.fetch([content.class.name, content.id], [])
                          .sample
                          .try(:image)
                          .try(:url)
                      end

                      content_image ||= asset_path("card-headers/#{content.class.name.downcase.pluralize}.jpg")
                    %>
                    <div class="activator" style="height: 200px; background: url('<%= content_image %>'); background-size: cover; background-position: center;"></div>
                    
                    <!-- Improved card title -->
                    <div class="card-title js-content-name activator" style="background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 70%, rgba(0,0,0,0) 100%); padding: 30px 16px 16px 16px; bottom: 0; width: 100%;">
                      <div style="font-weight: 500; text-shadow: 0 1px 3px rgba(0,0,0,0.4); font-size: 18px; color: white;">
                        <% content_name = content.respond_to?(:name) ? content.name : content.title %>
                        <%= ContentFormatterService.show(text: content_name.presence || 'Untitled', viewing_user: current_user) %>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Improved card actions -->
                  <div class="card-content" style="padding: 16px; border-bottom: 1px solid #f0f0f0;">
                    <!-- Creator info with avatar -->
                    <% user = @users_cache[content.user_id] %>
                    <% if user %>
                      <div style="display: flex; align-items: center; margin-bottom: 10px;">
                        <%= link_to profile_by_username_path(username: user.username), style: 'display: flex; align-items: center; text-decoration: none;' do %>
                          <div style="width: 32px; height: 32px; border-radius: 50%; overflow: hidden; margin-right: 10px; background-color: #f0f0f0; display: flex; align-items: center; justify-content: center;">
                            <% if user.image_url %>
                              <img src="<%= user.image_url.html_safe %>" alt="<%= user.display_name %>" style="width: 100%; height: 100%; object-fit: cover;">
                            <% else %>
                              <i class="material-icons grey-text text-lighten-1" style="font-size: 20px;">person</i>
                            <% end %>
                          </div>
                          <span style="font-size: 14px; font-weight: 500; color: #424242;"><%= user.display_name %></span>
                        <% end %>
                      </div>
                    <% end %>
                    
                    <!-- Tags as pills -->
                    <% if content.respond_to?(:page_tags) && content.page_tags.any? %>
                      <div class="tags-container" style="display: flex; flex-wrap: wrap; gap: 6px; margin-bottom: 12px;">
                        <% content.page_tags.each do |tag| %>
                          <% if tag.tag == @tag %>
                            <span class="tag-pill" style="padding: 4px 10px; background-color: <%= content_group[:color] == 'grey' ? '#9e9e9e' : "var(--#{content_group[:color]}-lighten-1)" %>; color: white; border-radius: 20px; font-size: 12px;">
                              <%= tag.tag %>
                            </span>
                          <% else %>
                            <span class="tag-pill" style="padding: 4px 10px; background-color: #f0f0f0; color: #757575; border-radius: 20px; font-size: 12px;">
                              <%= tag.tag %>
                            </span>
                          <% end %>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                  
                  <div class="card-action" style="display: flex; justify-content: space-between; background-color: #fafafa; padding: 12px 16px;">
                    <% if content.is_a?(Document) %>
                      <%= link_to content, class: "#{content_group[:color]}-text", style: "font-weight: 500; display: flex; align-items: center;", target: '_blank' do %>
                        <i class="material-icons left" style="font-size: 18px; margin-right: 6px;">visibility</i> View
                      <% end %>
                    <% else %>
                      <%= link_to content, class: "#{content_group[:color]}-text", style: "font-weight: 500; display: flex; align-items: center;" do %>
                        <i class="material-icons left" style="font-size: 18px; margin-right: 6px;">visibility</i> View
                      <% end %>
                    <% end %>
                    
                    <span class="grey-text" style="font-size: 12px; display: flex; align-items: center;">
                      <i class="material-icons tiny" style="font-size: 14px; margin-right: 4px;">update</i>
                      <%= time_ago_in_words content.updated_at %> ago
                    </span>
                  </div>
                  
                  <!-- Improved reveal with better readability -->
                  <div class="card-reveal" style="padding: 20px;">
                    <span class="card-title" style="font-size: 20px; font-weight: 500; margin-bottom: 15px; display: flex; justify-content: space-between; align-items: center;">
                      <%= content_name.presence || 'Untitled' %>
                      <i class="material-icons right grey-text">close</i>
                    </span>
                    
                    <% if user %>
                      <div style="display: flex; align-items: center; margin-bottom: 15px; background-color: #f9f9f9; padding: 8px 12px; border-radius: 4px;">
                        <%= link_to profile_by_username_path(username: user.username), style: 'display: flex; align-items: center; text-decoration: none;' do %>
                          <div style="width: 32px; height: 32px; border-radius: 50%; overflow: hidden; margin-right: 10px; background-color: #f0f0f0; display: flex; align-items: center; justify-content: center;">
                            <% if user.image_url %>
                              <img src="<%= user.image_url.html_safe %>" alt="<%= user.display_name %>" style="width: 100%; height: 100%; object-fit: cover;">
                            <% else %>
                              <i class="material-icons grey-text text-lighten-1" style="font-size: 20px;">person</i>
                            <% end %>
                          </div>
                          <div>
                            <span style="font-size: 14px; font-weight: 500; color: #424242; display: block;"><%= user.display_name %></span>
                            <span style="font-size: 12px; color: #757575; display: block;">Creator</span>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                    
                    <!-- Description with better typography -->
                    <% content_description = content.try(:description) || content.try(:synopsis) %>
                    <% if content_description.present? %>
                      <div style="margin-bottom: 20px; line-height: 1.6; color: #424242;">
                        <%= sanitize ContentFormatterService.show(text: truncate(content_description, length: 420, escape: false), viewing_user: current_user) %>
                      </div>
                    <% end %>
                    
                    <!-- Tags displayed in reveal -->
                    <% if content.respond_to?(:page_tags) && content.page_tags.any? %>
                      <div style="margin: 20px 0;">
                        <div style="font-size: 14px; font-weight: 500; color: #757575; margin-bottom: 8px;">Tags:</div>
                        <div style="display: flex; flex-wrap: wrap; gap: 6px;">
                          <% content.page_tags.each do |tag| %>
                            <% if tag.tag == @tag %>
                              <span style="padding: 6px 12px; background-color: <%= content_group[:color] == 'grey' ? '#9e9e9e' : "var(--#{content_group[:color]}-lighten-1)" %>; color: white; border-radius: 20px; font-size: 12px;">
                                <%= tag.tag %>
                              </span>
                            <% else %>
                              <span style="padding: 6px 12px; background-color: #f0f0f0; color: #757575; border-radius: 20px; font-size: 12px;">
                                <%= tag.tag %>
                              </span>
                            <% end %>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                    
                    <!-- View button in reveal -->
                    <div style="margin-top: 20px;">
                      <% if content.is_a?(Document) %>
                        <%= link_to content, class: "btn #{content_group[:color]}", style: "width: 100%;", target: '_blank' do %>
                          <i class="material-icons left">visibility</i> View <%= content_group[:type] %>
                        <% end %>
                      <% else %>
                        <%= link_to content, class: "btn #{content_group[:color]}", style: "width: 100%;" do %>
                          <i class="material-icons left">visibility</i> View <%= content_group[:type] %>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<!-- JavaScript for filtering -->
<%= content_for :javascript do %>
  document.addEventListener('DOMContentLoaded', function() {
    var filterLinks = document.querySelectorAll('.category-filter');
    var contentSections = document.querySelectorAll('.content-section');
    
    // Handle filter clicks
    filterLinks.forEach(function(link) {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Update active state
        filterLinks.forEach(function(l) { 
          l.classList.remove('active');
          l.style.backgroundColor = '#f5f5f5';
          l.style.fontWeight = '400';
        });
        
        this.classList.add('active');
        this.style.backgroundColor = '<%= @accent_color == "grey" ? "#9e9e9e" : "var(--#{@accent_color}-lighten-4)" %>';
        this.style.fontWeight = '500';
        
        var target = this.getAttribute('href').substring(1);
        
        if (target === 'all') {
          // Show all sections
          contentSections.forEach(function(section) {
            section.style.display = 'block';
          });
        } else {
          // Hide all sections first
          contentSections.forEach(function(section) {
            section.style.display = 'none';
          });
          
          // Show only the selected section
          var selectedSection = document.getElementById(target);
          if (selectedSection) {
            selectedSection.style.display = 'block';
          }
        }
        
        // Smooth scroll to content area
        window.scrollTo({
          top: document.querySelector('.category-filters').offsetTop - 20,
          behavior: 'smooth'
        });
      });
    });
    
    // Initialize with "All" selected
    filterLinks[0].style.backgroundColor = '<%= @accent_color == "grey" ? "#9e9e9e" : "var(--#{@accent_color}-lighten-4)" %>';
    filterLinks[0].style.fontWeight = '500';
    
    // Initialize all modals
    var modalElems = document.querySelectorAll('.modal');
    var modalInstances = M.Modal.init(modalElems, {opacity: 0.6});
    
    // Add click handler to the help button
    document.getElementById('how-to-join-btn').addEventListener('click', function() {
      var modalInstance = M.Modal.getInstance(document.getElementById('how-to-join-modal'));
      if (modalInstance) {
        modalInstance.open();
      }
    });
  });
<% end %>

