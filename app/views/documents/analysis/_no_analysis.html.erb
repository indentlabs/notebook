<div class="max-w-3xl mx-auto px-4 py-12">
  <!-- Header -->
  <div class="text-center mb-12">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full mb-6 bg-white border-2 shadow-sm" style="border-color: <%= Document.hex_color %>">
      <svg class="w-8 h-8" style="color: <%= Document.hex_color %>" fill="currentColor" viewBox="0 0 24 24">
        <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z" />
      </svg>
    </div>
    <h1 class="text-3xl font-bold text-gray-900 mb-3">Document analysis</h1>
    <p class="text-gray-600 mb-2">
      No analysis has been requested for <strong><%= document.title %></strong> yet.
    </p>
    <p class="text-sm text-gray-500 mb-8">
      Our automated document analysis is a Premium-only feature.
      <% unless user_signed_in? && current_user.on_premium_plan? %>
        <%= link_to 'Upgrade to Premium', subscription_path, class: 'text-blue-600 hover:underline' %> to get started.
      <% end %>
    </p>

    <% if user_signed_in? && current_user.on_premium_plan? %>
      <%= link_to 'Request an analysis',
          queue_analysis_document_path(@document),
          class: 'inline-flex items-center gap-2 px-6 py-3 rounded-lg text-white font-medium shadow-sm hover:shadow transition-all',
          style: "background-color: #{Document.hex_color}" %>
    <% else %>
      <%= link_to 'Request an analysis',
          queue_analysis_document_path(@document),
          class: 'inline-flex items-center gap-2 px-6 py-3 rounded-lg text-white font-medium shadow-sm opacity-50 cursor-not-allowed',
          style: "background-color: #{Document.hex_color}" %>
    <% end %>
  </div>

  <!-- Features Grid -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">What you'll get:</h2>
