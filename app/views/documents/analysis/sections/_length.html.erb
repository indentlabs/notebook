<div class="bg-white dark:bg-gray-800 rounded-lg border dark:border-gray-700 shadow-sm p-6">
  <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Length</h2>

  <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
    <div class="text-center">
      <div class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-1"><%= number_with_delimiter analysis.word_count %></div>
      <div class="text-sm text-gray-500 dark:text-gray-400">Words</div>
    </div>

    <div class="text-center">
      <div class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-1"><%= number_with_delimiter analysis.page_count %></div>
      <div class="text-sm text-gray-500 dark:text-gray-400">Pages</div>
    </div>

    <div class="text-center">
      <div class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-1"><%= number_with_delimiter analysis.paragraph_count %></div>
      <div class="text-sm text-gray-500 dark:text-gray-400">Paragraphs</div>
    </div>

    <div class="text-center">
      <div class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-1"><%= number_with_delimiter analysis.sentence_count %></div>
      <div class="text-sm text-gray-500 dark:text-gray-400">Sentences</div>
    </div>

    <div class="text-center">
      <div class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-1"><%= number_with_delimiter analysis.character_count %></div>
      <div class="text-sm text-gray-500 dark:text-gray-400">Characters</div>
    </div>
  </div>
</div>
