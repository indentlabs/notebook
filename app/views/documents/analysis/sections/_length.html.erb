<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm overflow-hidden h-full">
  <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Document Length</h2>
  </div>
  <div class="p-6">
    <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
      <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
        <div class="text-2xl font-bold text-gray-900 dark:text-gray-100">
          <%= number_with_delimiter analysis.word_count %>
        </div>
        <div class="text-sm text-gray-500 dark:text-gray-400">Words</div>
      </div>

      <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
        <div class="text-2xl font-bold text-gray-900 dark:text-gray-100">
          <%= number_with_delimiter analysis.sentence_count %>
        </div>
        <div class="text-sm text-gray-500 dark:text-gray-400">Sentences</div>
      </div>

      <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
        <div class="text-2xl font-bold text-gray-900 dark:text-gray-100">
          <%= number_with_delimiter analysis.paragraph_count %>
        </div>
        <div class="text-sm text-gray-500 dark:text-gray-400">Paragraphs</div>
      </div>

      <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
        <div class="text-2xl font-bold text-gray-900 dark:text-gray-100">
          <%= number_with_delimiter analysis.page_count %>
        </div>
        <div class="text-sm text-gray-500 dark:text-gray-400">Pages</div>
      </div>

      <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
        <div class="text-2xl font-bold text-gray-900 dark:text-gray-100">
          <%= number_with_delimiter analysis.character_count %>
        </div>
        <div class="text-sm text-gray-500 dark:text-gray-400">Characters</div>
      </div>

      <% if analysis.sentence_count && analysis.sentence_count > 0 %>
        <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <div class="text-2xl font-bold text-gray-900 dark:text-gray-100">
            <%= (analysis.word_count.to_f / analysis.sentence_count).round(1) %>
          </div>
          <div class="text-sm text-gray-500 dark:text-gray-400">Words/Sentence</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
