<div class="bg-white dark:bg-gray-800 rounded-lg border dark:border-gray-700 shadow-sm p-6">
  <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Time to read</h2>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
      <div class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-1">
        <%= distance_of_time_in_words(analysis.word_count / 100.0 * 60, 0, include_seconds: true) %>
      </div>
      <div class="text-sm font-medium text-gray-900 dark:text-gray-100">Slow</div>
      <div class="text-xs text-gray-500 dark:text-gray-400">100 wpm</div>
    </div>

    <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg border-2" style="border-color: <%= Document.hex_color %>">
      <div class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-1">
        <%= distance_of_time_in_words(analysis.word_count / 200.0 * 60, 0, include_seconds: true) %>
      </div>
      <div class="text-sm font-medium text-gray-900 dark:text-gray-100">Average</div>
      <div class="text-xs text-gray-500 dark:text-gray-400">200 wpm</div>
    </div>

    <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
      <div class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-1">
        <%= distance_of_time_in_words(analysis.word_count / 300.0 * 60, 0, include_seconds: true) %>
      </div>
      <div class="text-sm font-medium text-gray-900 dark:text-gray-100">Fast</div>
      <div class="text-xs text-gray-500 dark:text-gray-400">300 wpm</div>
    </div>

    <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
      <div class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-1">
        <%= distance_of_time_in_words(analysis.word_count / 400.0 * 60, 0, include_seconds: true) %>
      </div>
      <div class="text-sm font-medium text-gray-900 dark:text-gray-100">Speed</div>
      <div class="text-xs text-gray-500 dark:text-gray-400">400 wpm</div>
    </div>
  </div>
</div>
