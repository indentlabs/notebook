<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm overflow-hidden h-full">
  <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Reading Time</h2>
  </div>
  <div class="p-6">
    <div class="grid grid-cols-2 gap-4">
      <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
        <div class="text-2xl font-bold text-gray-900 dark:text-gray-100">
          <%= (analysis.word_count / 100.0).ceil %> min
        </div>
        <div class="text-sm font-medium text-gray-700 dark:text-gray-300">Slow</div>
        <div class="text-xs text-gray-500 dark:text-gray-400">100 wpm</div>
      </div>

      <div class="text-center p-4 bg-teal-50 dark:bg-teal-900 rounded-lg border-2 border-teal-500">
        <div class="text-2xl font-bold text-teal-700 dark:text-teal-300">
          <%= (analysis.word_count / 200.0).ceil %> min
        </div>
        <div class="text-sm font-medium text-teal-700 dark:text-teal-300">Average</div>
        <div class="text-xs text-teal-600 dark:text-teal-400">200 wpm</div>
      </div>

      <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
        <div class="text-2xl font-bold text-gray-900 dark:text-gray-100">
          <%= (analysis.word_count / 300.0).ceil %> min
        </div>
        <div class="text-sm font-medium text-gray-700 dark:text-gray-300">Fast</div>
        <div class="text-xs text-gray-500 dark:text-gray-400">300 wpm</div>
      </div>

      <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
        <div class="text-2xl font-bold text-gray-900 dark:text-gray-100">
          <%= (analysis.word_count / 400.0).ceil %> min
        </div>
        <div class="text-sm font-medium text-gray-700 dark:text-gray-300">Speed</div>
        <div class="text-xs text-gray-500 dark:text-gray-400">400 wpm</div>
      </div>
    </div>
  </div>
</div>
