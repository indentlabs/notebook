<div class="bg-white rounded-lg border shadow-sm p-6">
  <h2 class="text-lg font-semibold text-gray-900 mb-4">Time to read</h2>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <div class="text-center p-4 bg-gray-50 rounded-lg">
      <div class="text-2xl font-bold text-gray-900 mb-1">
        <%= distance_of_time_in_words(analysis.word_count / 100.0 * 60, 0, include_seconds: true) %>
      </div>
      <div class="text-sm font-medium text-gray-900">Slow</div>
      <div class="text-xs text-gray-500">100 wpm</div>
    </div>

    <div class="text-center p-4 bg-gray-50 rounded-lg border-2" style="border-color: <%= Document.hex_color %>">
      <div class="text-2xl font-bold text-gray-900 mb-1">
        <%= distance_of_time_in_words(analysis.word_count / 200.0 * 60, 0, include_seconds: true) %>
      </div>
      <div class="text-sm font-medium text-gray-900">Average</div>
      <div class="text-xs text-gray-500">200 wpm</div>
    </div>

    <div class="text-center p-4 bg-gray-50 rounded-lg">
      <div class="text-2xl font-bold text-gray-900 mb-1">
        <%= distance_of_time_in_words(analysis.word_count / 300.0 * 60, 0, include_seconds: true) %>
      </div>
      <div class="text-sm font-medium text-gray-900">Fast</div>
      <div class="text-xs text-gray-500">300 wpm</div>
    </div>

    <div class="text-center p-4 bg-gray-50 rounded-lg">
      <div class="text-2xl font-bold text-gray-900 mb-1">
        <%= distance_of_time_in_words(analysis.word_count / 400.0 * 60, 0, include_seconds: true) %>
      </div>
      <div class="text-sm font-medium text-gray-900">Speed</div>
      <div class="text-xs text-gray-500">400 wpm</div>
    </div>
  </div>
</div>
