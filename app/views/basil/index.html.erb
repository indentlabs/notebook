<% content_for :full_width_page, true %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header Section -->
  <%= render 'basil/header', subtitle: "I can help you visualize your characters and world. Select a page on the left to start generating images." %>

  <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
    <!-- Sidebar -->
    <div class="lg:col-span-1 space-y-6">
      <div class="sticky top-6">
        <h3 class="text-xs font-bold text-gray-400 uppercase tracking-widest px-2 mb-4 flex items-center gap-2">
          <span>Draw my...</span>
          <div class="h-px bg-gray-200 flex-1"></div>
        </h3>
        
        <div class="space-y-3">
          <% @enabled_content_types.each do |content_type| %>
            <%= link_to basil_content_index_path(content_type.downcase), class: 'block group' do %>
              <div class="<%= content_class_from_name(content_type).color %> relative overflow-hidden rounded-xl shadow-sm hover:shadow-md transition-all duration-300 transform group-hover:-translate-y-1">
                <div class="absolute inset-0 bg-black bg-opacity-10 group-hover:bg-opacity-0 transition-colors"></div>
                <div class="relative p-4 flex items-center justify-between text-white">
                  <div class="flex items-center gap-3">
                    <i class="material-icons text-2xl opacity-90 group-hover:scale-110 transition-transform"><%= content_class_from_name(content_type).icon %></i>
                    <span class="font-bold text-lg tracking-wide"><%= content_type.pluralize %></span>
                  </div>
                  <% if @content_type == content_type %>
                    <div class="bg-white bg-opacity-20 p-1 rounded-full">
                      <i class="material-icons text-sm">check</i>
                    </div>
                  <% else %>
                    <i class="material-icons opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300">chevron_right</i>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>

        <div class="mt-8 bg-gray-50 dark:bg-gray-800 p-6 rounded-2xl border border-gray-100 dark:border-gray-700">
          <h4 class="font-bold text-gray-900 dark:text-gray-100 mb-2">What about other pages?</h4>
          <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
            A lot of work goes into making sure each page produces accurate, high quality images.
            More page types will be added soon!
          </p>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="lg:col-span-3">
      
      <% unless current_user.on_premium_plan? %>
        <div class="mb-8 overflow-hidden bg-gradient-to-br from-orange-50 to-amber-50 dark:from-gray-800 dark:to-gray-800 border border-orange-100 dark:border-orange-800 rounded-2xl p-0 shadow-sm relative transition-colors">
          <div class="p-6 sm:p-8">
            <div class="flex items-start gap-4">
              <div class="p-3 bg-orange-100 text-orange-600 dark:bg-orange-900 dark:text-orange-400 rounded-xl shrink-0">
                <i class="material-icons">star</i>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-bold text-orange-900 dark:text-orange-100 mb-1">Premium Feature Preview</h3>
                <p class="text-orange-800 dark:text-orange-200 mb-4">
                  Image generation is a Premium-only feature, but free accounts can still generate up
                  to <span class="font-bold"><%= pluralize BasilService::FREE_IMAGE_LIMIT, 'image' %></span> for free.
                </p>
                
                <div class="flex items-center justify-between text-sm font-medium text-orange-800 dark:text-orange-200 mb-2">
                  <span>Usage</span>
                  <span><%= @generated_images_count %> / <%= BasilService::FREE_IMAGE_LIMIT %></span>
                </div>
                
                <div class="w-full bg-orange-200 dark:bg-gray-700 rounded-full h-2.5 overflow-hidden mb-6">
                  <div class="bg-orange-500 dark:bg-orange-500 h-2.5 rounded-full transition-all duration-500" style="width: <%= [@generated_images_count * 100.0 / BasilService::FREE_IMAGE_LIMIT, 100].min %>%"></div>
                </div>

                <% if @generated_images_count >= BasilService::FREE_IMAGE_LIMIT %>
                  <%= link_to subscription_path, class: 'inline-flex items-center gap-2 px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white rounded-lg font-medium transition-colors shadow-sm' do %>
                    <span>Upgrade to Premium</span>
                    <i class="material-icons text-sm">arrow_forward</i>
                  <% end %>
                <% else %>
                  <p class="text-sm text-orange-700 dark:text-orange-300">
                    You have <%= pluralize [0, BasilService::FREE_IMAGE_LIMIT - @generated_images_count].max, 'free image' %> remaining.
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% if @universe_scope %>
        <div class="<%= Universe.color %> bg-opacity-100 text-white rounded-2xl p-6 mb-8 shadow-md flex items-center justify-between flex-wrap gap-4">
          <div class="flex items-center gap-4">
            <div class="bg-white bg-opacity-20 p-3 rounded-xl backdrop-blur-sm">
              <i class="material-icons text-2xl"><%= Universe.icon %></i>
            </div>
            <div>
              <p class="text-white text-opacity-80 text-sm font-medium uppercase tracking-wider mb-1">Filtering by Universe</p>
              <h3 class="text-xl font-bold"><%= @universe_scope.name %></h3>
            </div>
          </div>
          <%= link_to basil_content_index_path(@content_type, universe: "all"), class: 'bg-white bg-opacity-10 hover:bg-white bg-opacity-20 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors backdrop-blur-sm flex items-center gap-2' do %>
            <span>Show all <%= @content_type.pluralize.downcase %></span>
            <i class="material-icons text-sm">close</i>
          <% end %>
        </div>
      <% end %>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @content.each do |content| %>
          <%= link_to basil_content_path(@content_type, content.id), class: "group" do %>
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-gray-700 overflow-hidden h-full flex flex-col transform hover:-translate-y-1">
              <div class="relative aspect-[4/3] overflow-hidden bg-gray-100">
                <%= image_tag content.random_image_including_private(format: :medium), class: "w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" %>
              </div>
              <div class="p-5 flex-1 flex flex-col justify-center">
                <h3 class="font-bold text-gray-900 dark:text-gray-100 text-lg group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors line-clamp-2">
                  <%= content.name %>
                </h3>
              </div>
            </div>
          <% end %>
        <% end %>

        <% if current_user.can_create?(@content_type.constantize) %>
          <%= link_to new_polymorphic_path(@content_type.downcase), class: "group" do %>
            <div class="h-full min-h-[250px] bg-gray-50 dark:bg-gray-800 rounded-2xl border-2 border-dashed border-gray-300 dark:border-gray-600 hover:border-blue-500 hover:bg-blue-50 dark:hover:bg-gray-700 transition-all duration-300 flex flex-col items-center justify-center p-6 text-center cursor-pointer">
              <div class="w-16 h-16 bg-white dark:bg-gray-700 rounded-full shadow-sm flex items-center justify-center mb-4 group-hover:scale-110 group-hover:shadow-md transition-all">
                <i class="material-icons text-3xl text-gray-400 group-hover:text-blue-500"><%= @content_type.constantize.icon rescue 'add' %></i>
              </div>
              <span class="font-bold text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                New <%= @content_type %>
              </span>
              <span class="text-sm text-gray-500 dark:text-gray-400 mt-2">Create a new page</span>
            </div>
          <% end %>
        <% elsif Rails.application.config.content_types[:premium].include?(@content_type.constantize) %>
          <% ct = @content_type.constantize %>
          <%= link_to subscription_path, class: "group" do %>
            <div class="h-full min-h-[250px] <%= ct.color %> bg-opacity-10 dark:bg-gray-800 rounded-2xl border-2 border-dashed <%= ct.text_color.to_s.gsub('text-', 'border-') %> border-opacity-40 dark:border-gray-600 hover:border-opacity-100 dark:hover:border-gray-500 hover:bg-opacity-20 dark:hover:bg-gray-700 transition-all duration-300 flex flex-col items-center justify-center p-6 text-center cursor-pointer">
              <div class="w-16 h-16 bg-white dark:bg-gray-700 rounded-full shadow-sm flex items-center justify-center mb-4 group-hover:scale-110 group-hover:shadow-md transition-all">
                <i class="material-icons text-3xl <%= ct.text_color %>"><%= ct.icon rescue 'lock' %></i>
              </div>
              <span class="font-bold <%= ct.text_color %> brightness-75 dark:brightness-100 dark:text-gray-100 transition-colors">
                New <%= @content_type %>
              </span>
              <span class="text-sm <%= ct.text_color %> opacity-80 dark:text-gray-400 mt-2">
                Upgrade to Premium to create <%= @content_type.pluralize.downcase %>
              </span>
            </div>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>
