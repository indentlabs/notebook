<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="flex items-center mb-8">
    <%= link_to help_center_path, class: 'text-gray-500 hover:text-gray-700 mr-3', title: "Back to Help Center" do %>
      <i class="material-icons">arrow_back</i>
    <% end %>
    <h1 class="text-3xl font-bold text-gray-800">Premium Features Guide</h1>
  </div>

  <!-- Introduction -->
  <div class="bg-gradient-to-br from-blue-50 to-purple-50 border border-blue-200 rounded-xl p-8 mb-12">
    <div class="flex items-start">
      <div class="w-16 h-16 bg-gradient-to-br from-blue-200 to-purple-200 rounded-2xl flex items-center justify-center mr-6 flex-shrink-0 shadow-sm">
        <i class="material-icons text-blue-700 text-2xl">star</i>
      </div>
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Unlock Your Creative Potential</h2>
        <p class="text-lg text-gray-700 leading-relaxed mb-4">
          Notebook.ai Premium supercharges your worldbuilding with advanced features, unlimited content creation, AI-powered tools, and professional collaboration capabilities.
        </p>
        <div class="bg-white rounded-lg p-4 border border-blue-200">
          <p class="text-sm text-blue-800 font-medium">
            <i class="material-icons text-blue-600 text-sm mr-2">info</i>
            <strong>Important:</strong> You can always view and edit your existing Premium pages, even if your subscription expires. Premium is only required to create NEW premium content.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="space-y-12">
    
    <!-- Advanced Content Types -->
    <section>
      <div class="flex items-center mb-6">
        <div class="w-12 h-12 bg-gradient-to-br from-purple-100 to-purple-200 rounded-xl flex items-center justify-center mr-4 shadow-sm">
          <i class="material-icons text-purple-700">extension</i>
        </div>
        <div>
          <h2 class="text-2xl font-semibold text-gray-800">Advanced Content Types</h2>
          <p class="text-gray-600">Create detailed pages for every aspect of your fictional world</p>
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 mb-6">
        <p class="text-lg text-gray-700 mb-6">
          Premium unlocks <strong><%= Rails.application.config.content_types[:premium].count %> additional page types</strong> beyond the free Character, Location, Item, and Universe pages.
        </p>
        
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
          <% Rails.application.config.content_types[:premium].each do |content_type| %>
            <%= link_to "/worldbuilding/#{content_type.name.downcase.pluralize.gsub(' ', '_')}", 
                class: "bg-gray-50 rounded-lg p-4 text-center hover:bg-gray-100 transition-colors duration-200 block no-underline" do %>
              <div class="w-10 h-10 <%= content_type.color %> rounded-lg flex items-center justify-center mx-auto mb-2">
                <i class="material-icons text-white text-lg"><%= content_type.icon %></i>
              </div>
              <div class="text-sm font-medium text-gray-900"><%= content_type.name.pluralize %></div>
            <% end %>
          <% end %>
        </div>
      </div>
    </section>

    <!-- Enhanced Storage & Limits -->
    <section>
      <div class="flex items-center mb-6">
        <div class="w-12 h-12 bg-gradient-to-br from-green-100 to-green-200 rounded-xl flex items-center justify-center mr-4 shadow-sm">
          <i class="material-icons text-green-700">cloud_upload</i>
        </div>
        <div>
          <h2 class="text-2xl font-semibold text-gray-800">Enhanced Storage & Limits</h2>
          <p class="text-gray-600">More space and unlimited creative freedom</p>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
              <i class="material-icons text-blue-600">language</i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Unlimited Universes</h3>
          </div>
          <p class="text-gray-600 mb-4">Create as many fictional worlds as your imagination demands. No more 5-universe limit.</p>
          <div class="flex items-center text-sm text-green-600 font-medium">
            <i class="material-icons text-sm mr-1">check_circle</i>
            Perfect for prolific worldbuilders
          </div>
        </div>
        
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
              <i class="material-icons text-purple-600">storage</i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">10GB Image Storage</h3>
          </div>
          <p class="text-gray-600 mb-4">Upload high-quality images, maps, artwork, and references with 200x more storage space.</p>
          <div class="flex items-center text-sm text-green-600 font-medium">
            <i class="material-icons text-sm mr-1">check_circle</i>
            From 50MB to 10GB capacity
          </div>
        </div>
      </div>
    </section>

    <!-- AI-Powered Features -->
    <section>
      <div class="flex items-center mb-6">
        <div class="w-12 h-12 bg-gradient-to-br from-indigo-100 to-indigo-200 rounded-xl flex items-center justify-center mr-4 shadow-sm">
          <i class="material-icons text-indigo-700">psychology</i>
        </div>
        <div>
          <h2 class="text-2xl font-semibold text-gray-800">AI-Powered Features</h2>
          <p class="text-gray-600">Intelligent tools to enhance your creative process</p>
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div>
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mr-3">
                <i class="material-icons text-indigo-600">auto_awesome</i>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Document Analysis</h3>
            </div>
            <p class="text-gray-600 mb-4">
              Upload your manuscripts, stories, or notes and let AI analyze them to automatically populate your worldbuilding pages with characters, locations, and details.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Extract characters and relationships
              </li>
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Identify locations and settings
              </li>
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Generate plot summaries
              </li>
            </ul>
          </div>
          <div>
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                <i class="material-icons text-blue-600">lightbulb</i>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Enhanced Writing Prompts</h3>
            </div>
            <p class="text-gray-600 mb-4">
              Get personalized, context-aware writing prompts based on your existing content to help develop your pages and overcome creative blocks.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Tailored to your world's themes
              </li>
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Character development focused
              </li>
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Plot and conflict suggestions
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Advanced Organization -->
    <section>
      <div class="flex items-center mb-6">
        <div class="w-12 h-12 bg-gradient-to-br from-teal-100 to-teal-200 rounded-xl flex items-center justify-center mr-4 shadow-sm">
          <i class="material-icons text-teal-700">timeline</i>
        </div>
        <div>
          <h2 class="text-2xl font-semibold text-gray-800">Advanced Organization Tools</h2>
          <p class="text-gray-600">Sophisticated tools for complex worldbuilding projects</p>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-teal-100 rounded-lg flex items-center justify-center mr-3">
              <i class="material-icons text-teal-600">timeline</i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Timeline Creation</h3>
          </div>
          <p class="text-gray-600 mb-4">Create interactive timelines to organize events, plot points, and historical moments across your fictional worlds.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-center">
              <i class="material-icons text-green-500 text-sm mr-2">check</i>
              Visual timeline editor
            </li>
            <li class="flex items-center">
              <i class="material-icons text-green-500 text-sm mr-2">check</i>
              Link events to characters and locations
            </li>
          </ul>
        </div>
        
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-pink-100 rounded-lg flex items-center justify-center mr-3">
              <i class="material-icons text-pink-600">collections_bookmark</i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Collections Management</h3>
          </div>
          <p class="text-gray-600 mb-4">Create and curate collections of worldbuilding content for publication and sharing with the community.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-center">
              <i class="material-icons text-green-500 text-sm mr-2">check</i>
              Organize related content
            </li>
            <li class="flex items-center">
              <i class="material-icons text-green-500 text-sm mr-2">check</i>
              Share with the community
            </li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Community Features -->
    <section>
      <div class="flex items-center mb-6">
        <div class="w-12 h-12 bg-gradient-to-br from-amber-100 to-amber-200 rounded-xl flex items-center justify-center mr-4 shadow-sm">
          <i class="material-icons text-amber-700">group</i>
        </div>
        <div>
          <h2 class="text-2xl font-semibold text-gray-800">Enhanced Community Features</h2>
          <p class="text-gray-600">Stand out and connect with fellow creators</p>
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div>
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-amber-100 rounded-lg flex items-center justify-center mr-3">
                <i class="material-icons text-amber-600">military_tech</i>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Customizable Forum Badge</h3>
            </div>
            <p class="text-gray-600 mb-4">
              Get a special Premium badge next to your name on the forums, showcasing your commitment to serious worldbuilding.
            </p>
            <div class="bg-amber-50 rounded-lg p-4 border border-amber-200">
              <div class="flex items-center">
                <span class="text-sm font-medium text-gray-800 mr-2">Your Username</span>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-purple-500 to-blue-600 text-white">
                  Premium
                </span>
              </div>
            </div>
          </div>
          <div>
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                <i class="material-icons text-blue-600">share</i>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Enhanced Sharing</h3>
            </div>
            <p class="text-gray-600 mb-4">
              Share your premium content types with the community feed and gain more visibility for your creative work.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Share premium page types
              </li>
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Featured content opportunities
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Collaboration Features -->
    <section>
      <div class="flex items-center mb-6">
        <div class="w-12 h-12 bg-gradient-to-br from-cyan-100 to-cyan-200 rounded-xl flex items-center justify-center mr-4 shadow-sm">
          <i class="material-icons text-cyan-700">groups</i>
        </div>
        <div>
          <h2 class="text-2xl font-semibold text-gray-800">Premium Collaboration</h2>
          <p class="text-gray-600">Share your Premium benefits with collaborators</p>
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8">
        <div class="mb-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Collaborative Premium Access</h3>
          <p class="text-gray-600 mb-4">
            When you invite collaborators to your universes, they gain access to Premium features within your shared worlds, even if they don't have their own Premium subscription.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-lg p-6 border border-blue-200">
            <h4 class="font-semibold text-gray-900 mb-3">Collaborators Can:</h4>
            <ul class="space-y-2 text-sm text-gray-700">
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Create premium page types in your universes
              </li>
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Access document analysis tools
              </li>
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Use timeline and collection features
              </li>
            </ul>
          </div>
          <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-lg p-6 border border-purple-200">
            <h4 class="font-semibold text-gray-900 mb-3">Perfect For:</h4>
            <ul class="space-y-2 text-sm text-gray-700">
              <li class="flex items-center">
                <i class="material-icons text-purple-500 text-sm mr-2">group</i>
                Writing groups and co-authors
              </li>
              <li class="flex items-center">
                <i class="material-icons text-purple-500 text-sm mr-2">school</i>
                Classroom projects and students
              </li>
              <li class="flex items-center">
                <i class="material-icons text-purple-500 text-sm mr-2">gamepad</i>
                RPG groups and game masters
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Visual Features -->
    <section>
      <div class="flex items-center mb-6">
        <div class="w-12 h-12 bg-gradient-to-br from-rose-100 to-rose-200 rounded-xl flex items-center justify-center mr-4 shadow-sm">
          <i class="material-icons text-rose-700">visibility</i>
        </div>
        <div>
          <h2 class="text-2xl font-semibold text-gray-800">Basil Visualization Features</h2>
          <p class="text-gray-600">See your worldbuilding come to life visually</p>
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Interactive Page Visualization</h3>
            <p class="text-gray-600 mb-4">
              Basil transforms your worldbuilding pages into interactive visual representations, helping you understand connections and relationships within your fictional worlds.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Visual relationship mapping
              </li>
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Interactive content exploration
              </li>
              <li class="flex items-center">
                <i class="material-icons text-green-500 text-sm mr-2">check</i>
                Identify content gaps and opportunities
              </li>
            </ul>
          </div>
          <div class="bg-gradient-to-br from-rose-50 to-pink-50 rounded-lg p-6 border border-rose-200">
            <div class="text-center">
              <div class="w-16 h-16 bg-gradient-to-br from-rose-200 to-pink-200 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <i class="material-icons text-rose-700 text-2xl">account_tree</i>
              </div>
              <h4 class="font-semibold text-gray-900 mb-2">Discover Hidden Connections</h4>
              <p class="text-sm text-gray-600">
                See how your characters, locations, and plot elements interconnect in ways you might not have realized.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Getting Started -->
    <section>
      <div class="bg-gradient-to-br from-gray-50 to-blue-50 rounded-xl p-8 border border-gray-200">
        <div class="text-center mb-6">
          <h2 class="text-2xl font-semibold text-gray-800 mb-4">Ready to Upgrade?</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Join thousands of writers, game masters, and worldbuilders who have unlocked their creative potential with Notebook.ai Premium.
          </p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <%= link_to subscription_path, class: 'inline-flex items-center justify-center px-8 py-4 border border-transparent text-lg font-medium rounded-xl text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-xl hover:shadow-2xl transition-all duration-200' do %>
            <i class="material-icons mr-3">upgrade</i>
            Upgrade to Premium
          <% end %>
          <%= link_to prepay_path, class: 'inline-flex items-center justify-center px-8 py-4 border border-gray-300 text-lg font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-lg hover:shadow-xl transition-all duration-200' do %>
            <i class="material-icons mr-3">card_giftcard</i>
            Purchase Premium Codes
          <% end %>
        </div>
      </div>
    </section>

  </div>
</div>