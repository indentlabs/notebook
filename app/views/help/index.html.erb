<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="flex items-center mb-8">
    <%= link_to data_vault_path, class: 'text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 mr-3', title: "Back to your Data Vault" do %>
      <i class="material-icons">arrow_back</i>
    <% end %>
    <h1 class="text-3xl font-bold text-gray-800 dark:text-white">Help Center</h1>
  </div>

  <!-- Main Content -->
  <div class="space-y-12">

    <!-- Features & Capabilities Section -->
    <section>
      <div class="flex items-center mb-4">
        <i class="material-icons text-green-600 dark:text-green-400 mr-2">info</i>
        <h2 class="text-2xl font-semibold text-gray-800 dark:text-white">Features & Capabilities</h2>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-4 mb-12">
        <%= link_to help_free_features_path, class: "block" do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-6">
            <div class="flex items-center mb-3">
              <div class="bg-green-50 dark:bg-green-900 rounded-full p-2 mr-3">
                <i class="material-icons text-green-600 dark:text-green-200">explore</i>
              </div>
              <h3 class="font-medium text-gray-800 dark:text-white">Free Features Guide</h3>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Complete overview of free features including core worldbuilding pages, document creation, universe organization, community features, and collaboration tools.</p>
            <div class="flex items-center text-sm text-green-600 dark:text-green-400 font-medium">
              <span>Read guide</span>
              <i class="material-icons ml-1 text-sm">arrow_forward</i>
            </div>
          </div>
        <% end %>
        
        <%= link_to help_premium_features_path, class: "block" do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-6">
            <div class="flex items-center mb-3">
              <div class="bg-purple-50 dark:bg-purple-900 rounded-full p-2 mr-3">
                <i class="material-icons text-purple-600 dark:text-purple-200">star</i>
              </div>
              <h3 class="font-medium text-gray-800 dark:text-white">Premium Features Guide</h3>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Comprehensive guide to Premium features including advanced content types, document analysis, unlimited storage, timelines, collections, and collaboration tools.</p>
            <div class="flex items-center text-sm text-purple-600 dark:text-purple-400 font-medium">
              <span>Read guide</span>
              <i class="material-icons ml-1 text-sm">arrow_forward</i>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <!-- Worldbuilding Pages Section -->
    <!-- Worldbuilding Pages Section -->
    <section>
      <div class="flex items-center mb-4">
        <i class="material-icons text-blue-600 dark:text-blue-400 mr-2">menu_book</i>
        <h2 class="text-2xl font-semibold text-gray-800 dark:text-white">About our worldbuilding pages</h2>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3">
        <% Rails.application.config.content_types[:all].each do |content_type| %>
          <%= link_to send("#{content_type.name.downcase}_worldbuilding_info_path"), class: "block" do %>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow overflow-hidden">
              <div class="p-4 <%= content_type.color %> text-white flex items-center justify-center">
                <i class="material-icons text-2xl"><%= content_type.icon %></i>
              </div>
              <div class="p-2 text-center text-sm font-medium text-gray-700 dark:text-gray-300">
                <%= content_type.name.pluralize %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </section>

    <!-- Documentation Section -->
    <section>
      <div class="flex items-center mb-4">
        <i class="material-icons text-purple-600 dark:text-purple-400 mr-2">library_books</i>
        <h2 class="text-2xl font-semibold text-gray-800 dark:text-white">Documentation</h2>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-12">
        <%= link_to help_your_first_universe_path, class: "block" do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-6">
            <div class="flex items-center mb-3">
              <div class="bg-blue-50 dark:bg-blue-900 rounded-full p-2 mr-3">
                <i class="material-icons text-blue-600 dark:text-blue-200">language</i>
              </div>
              <h3 class="font-medium text-gray-800 dark:text-white">Your First Universe</h3>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Step-by-step guide to creating your first fictional universe. Learn how to organize characters, locations, items, and build the foundation of your worldbuilding project.</p>
            <div class="flex items-center text-sm text-blue-600 dark:text-blue-400 font-medium">
              <span>Read guide</span>
              <i class="material-icons ml-1 text-sm">arrow_forward</i>
            </div>
          </div>
        <% end %>
        
        <%= link_to help_page_templates_path, class: "block" do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-6">
            <div class="flex items-center mb-3">
              <div class="bg-purple-50 dark:bg-purple-900 rounded-full p-2 mr-3">
                <i class="material-icons text-purple-600 dark:text-purple-200">tune</i>
              </div>
              <h3 class="font-medium text-gray-800 dark:text-white">Page Templates</h3>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Learn how to customize templates to structure your content perfectly. Complete guide to categories, fields, and template management.</p>
            <div class="flex items-center text-sm text-purple-600 dark:text-purple-400 font-medium">
              <span>Read guide</span>
              <i class="material-icons ml-1 text-sm">arrow_forward</i>
            </div>
          </div>
        <% end %>
        
        <%= link_to help_organizing_with_universes_path, class: "block" do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-6">
            <div class="flex items-center mb-3">
              <div class="bg-blue-50 dark:bg-blue-900 rounded-full p-2 mr-3">
                <i class="material-icons text-blue-600 dark:text-blue-200">language</i>
              </div>
              <h3 class="font-medium text-gray-800 dark:text-white">Organizing with Universes</h3>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Master the art of worldbuilding organization with universes. Learn about privacy, collaboration, focus mode, and best practices for managing complex fictional worlds.</p>
            <div class="flex items-center text-sm text-blue-600 dark:text-blue-400 font-medium">
              <span>Read guide</span>
              <i class="material-icons ml-1 text-sm">arrow_forward</i>
            </div>
          </div>
        <% end %>
        
        <%= link_to help_page_visualization_path, class: "block" do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-6">
            <div class="flex items-center mb-3">
              <div class="bg-purple-50 dark:bg-purple-900 rounded-full p-2 mr-3">
                <i class="material-icons text-purple-600 dark:text-purple-200">visibility</i>
              </div>
              <h3 class="font-medium text-gray-800 dark:text-white">Page Visualization with Basil</h3>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Complete guide to visualizing your worldbuilding content with Basil. Generate character portraits, location art, and item illustrations from your page details.</p>
            <div class="flex items-center text-sm text-purple-600 dark:text-purple-400 font-medium">
              <span>Read guide</span>
              <i class="material-icons ml-1 text-sm">arrow_forward</i>
            </div>
          </div>
        <% end %>
        
        <%= link_to help_document_analysis_path, class: "block" do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-6">
            <div class="flex items-center mb-3">
              <div class="bg-indigo-50 dark:bg-indigo-900 rounded-full p-2 mr-3">
                <i class="material-icons text-indigo-600 dark:text-indigo-200">psychology</i>
              </div>
              <h3 class="font-medium text-gray-800 dark:text-white">Document Analysis</h3>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Master AI-powered document analysis to automatically extract characters, locations, and plot elements from your manuscripts and stories.</p>
            <div class="flex items-center text-sm text-indigo-600 dark:text-indigo-400 font-medium">
              <span>Read guide</span>
              <i class="material-icons ml-1 text-sm">arrow_forward</i>
            </div>
          </div>
        <% end %>
        
        <%= link_to help_organizing_with_tags_path, class: "block" do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-6">
            <div class="flex items-center mb-3">
              <div class="bg-orange-50 dark:bg-orange-900 rounded-full p-2 mr-3">
                <i class="material-icons text-orange-600 dark:text-orange-200">tag</i>
              </div>
              <h3 class="font-medium text-gray-800 dark:text-white">Organizing with Tags</h3>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Master the art of content organization using tags. Learn how to create, manage, and use tags to efficiently organize and discover your worldbuilding content.</p>
            <div class="flex items-center text-sm text-orange-600 dark:text-orange-400 font-medium">
              <span>Read guide</span>
              <i class="material-icons ml-1 text-sm">arrow_forward</i>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <!-- Feedback and Surveys Section -->
    <section>
      <div class="flex items-center mb-4">
        <i class="material-icons text-green-600 dark:text-green-400 mr-2">feedback</i>
        <h2 class="text-2xl font-semibold text-gray-800 dark:text-white">Feedback and surveys</h2>
      </div>
      
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 p-6 mb-6">
        <div class="prose text-gray-600 dark:text-gray-300 max-w-none">
          <p>
            The following links will open a new tab to Google Forms. All responses are anonymous and separated from your Notebook.ai account, so please
            provide an email address if you would like a response or follow-up.
          </p>
          <p>
            You can also ask for help from other users on <%= link_to 'the forums', 'https://www.notebook.ai/forum/site-support', class: 'text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300' %>.
          </p>
          <p>
            Thank you for helping make Notebook.ai better!
          </p>
        </div>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
        <!-- General Feedback Forms -->
        <%= link_to 'https://docs.google.com/forms/d/e/1FAIpQLSe0jnqJlcPJDqwogGere5j8-8F1nSGGYkzbsI-XkOeMnGwLrA/viewform', target: '_blank', class: 'block' do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-4 flex items-center">
            <div class="bg-red-50 dark:bg-red-900 rounded-full p-2 mr-3">
              <i class="material-icons text-red-600 dark:text-red-200">bug_report</i>
            </div>
            <div class="flex-grow">
              <h3 class="font-medium text-gray-800 dark:text-white">Report a problem</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">Let us know about any issues you encounter</p>
            </div>
            <i class="material-icons text-gray-400 dark:text-gray-500">open_in_new</i>
          </div>
        <% end %>
        
        <%= link_to 'https://docs.google.com/forms/d/e/1FAIpQLScOhSMdDqWqJu9HGPQdmd0R9s90_AcSo0g6_Nc1qNjQIbSaXA/viewform', target: '_blank', class: 'block' do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-4 flex items-center">
            <div class="bg-blue-50 dark:bg-blue-900 rounded-full p-2 mr-3">
              <i class="material-icons text-blue-600 dark:text-blue-200">lightbulb</i>
            </div>
            <div class="flex-grow">
              <h3 class="font-medium text-gray-800 dark:text-white">Request a feature</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">Suggest new features or improvements</p>
            </div>
            <i class="material-icons text-gray-400 dark:text-gray-500">open_in_new</i>
          </div>
        <% end %>
        
        <%= link_to 'https://docs.google.com/forms/d/e/1FAIpQLScZWEVMgm8hBWIIVj1LPzo0GqflmWUrLQlc4TAYqsaS087oAA/viewform', target: '_blank', class: 'block' do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-4 flex items-center">
            <div class="bg-green-50 dark:bg-green-900 rounded-full p-2 mr-3">
              <i class="material-icons text-green-600 dark:text-green-200">rate_review</i>
            </div>
            <div class="flex-grow">
              <h3 class="font-medium text-gray-800 dark:text-white">Leave feedback</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">Share your thoughts about Notebook.ai</p>
            </div>
            <i class="material-icons text-gray-400 dark:text-gray-500">open_in_new</i>
          </div>
        <% end %>
        
        <%= link_to 'https://docs.google.com/forms/d/e/1FAIpQLSctM_QaTIYTaj4WS546L--9WBbEIxAA9LKhWINb5CzguLR-JQ/viewform?usp=sf_link', target: '_blank', class: 'block' do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-4 flex items-center">
            <div class="bg-yellow-50 dark:bg-yellow-900 rounded-full p-2 mr-3">
              <i class="material-icons text-yellow-600 dark:text-yellow-200">smartphone</i>
            </div>
            <div class="flex-grow">
              <h3 class="font-medium text-gray-800 dark:text-white">Mobile usage survey</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">Help us improve the mobile experience</p>
            </div>
            <i class="material-icons text-gray-400 dark:text-gray-500">open_in_new</i>
          </div>
        <% end %>
        
        <%= link_to 'https://docs.google.com/forms/d/1PFOaa97Cu3vrceUvcuFT6nyITaMwR-4wQSarUdVoPSg/viewform', target: '_blank', class: 'block' do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-4 flex items-center">
            <div class="bg-purple-50 dark:bg-purple-900 rounded-full p-2 mr-3">
              <i class="material-icons text-purple-600 dark:text-purple-200">add_circle</i>
            </div>
            <div class="flex-grow">
              <h3 class="font-medium text-gray-800 dark:text-white">Request another page type</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">Suggest new worldbuilding categories</p>
            </div>
            <i class="material-icons text-gray-400 dark:text-gray-500">open_in_new</i>
          </div>
        <% end %>
        
        <!-- Premium User Forms -->
        <% if user_signed_in? && current_user.on_premium_plan? %>
          <%= link_to 'https://docs.google.com/forms/d/e/1FAIpQLScjWJfW2p9LoGfKe9uEn4xWvve-AhX3QtY7hqm7BCyyK0HdRA/viewform?usp=sf_link', target: '_blank', class: 'block' do %>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-4 flex items-center">
              <div class="bg-indigo-50 dark:bg-indigo-900 rounded-full p-2 mr-3">
                <i class="material-icons text-indigo-600 dark:text-indigo-200">psychology</i>
              </div>
              <div class="flex-grow">
                <h3 class="font-medium text-gray-800 dark:text-white">Document Analysis Feedback</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">Share your experience with AI analysis</p>
              </div>
              <i class="material-icons text-gray-400 dark:text-gray-500">open_in_new</i>
            </div>
          <% end %>
          
          <%= link_to 'https://docs.google.com/forms/d/e/1FAIpQLSfHHcOpU-CD9EFILPVMd4ZtgWIFkxmzLMW1mdvanJqqLKgMAA/viewform?usp=sf_link', target: '_blank', class: 'block' do %>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-4 flex items-center">
              <div class="bg-teal-50 dark:bg-teal-900 rounded-full p-2 mr-3">
                <i class="material-icons text-teal-600 dark:text-teal-200">timeline</i>
              </div>
              <div class="flex-grow">
                <h3 class="font-medium text-gray-800 dark:text-white">Timeline Editor Beta Feedback</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">Help improve the timeline feature</p>
              </div>
              <i class="material-icons text-gray-400 dark:text-gray-500">open_in_new</i>
            </div>
          <% end %>
          
          <%= link_to 'https://docs.google.com/forms/d/e/1FAIpQLScCPsoJxLxOC_nY3nMrtENja33lnMXNDrZLtWOxS2BYCNlpCQ/viewform?usp=sf_link', target: '_blank', class: 'block' do %>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow p-4 flex items-center">
              <div class="bg-pink-50 dark:bg-pink-900 rounded-full p-2 mr-3">
                <i class="material-icons text-pink-600 dark:text-pink-200">collections_bookmark</i>
              </div>
              <div class="flex-grow">
                <h3 class="font-medium text-gray-800 dark:text-white">Collections feedback</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">Share thoughts on the collections feature</p>
              </div>
              <i class="material-icons text-gray-400 dark:text-gray-500">open_in_new</i>
            </div>
          <% end %>
        <% end %>
      </div>
    </section>

    <!-- Additional Help Section - Only for signed-in users -->
    <% if user_signed_in? %>
      <section>
        <div class="flex items-center mb-4">
          <i class="material-icons text-amber-600 dark:text-amber-400 mr-2">contact_support</i>
          <h2 class="text-2xl font-semibold text-gray-800 dark:text-white">Additional help</h2>
        </div>
        
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 p-6">
          <div class="prose text-gray-600 dark:text-gray-300 max-w-none">
            <p>
              Have a question not answered by anything above? Feel free to send me an email any time at <strong>andrew@indentlabs.com</strong> and I'll get back to you
              as quickly as possible. I'm always happy to help!
            </p>
            <p>
              Happy worldbuilding!
            </p>
          </div>
          
          <div class="mt-6 flex">
            <a href="mailto:andrew@indentlabs.com" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              <i class="material-icons mr-2">email</i>
              Contact Support
            </a>
          </div>
        </div>
      </section>
    <% end %>
  </div>
</div>