  <div class="px-4 py-4 mb-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8">
    <div class="flex flex-col w-full mb-6 lg:justify-between lg:flex-row md:mb-8">
