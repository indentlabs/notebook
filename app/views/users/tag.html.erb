<%
  # Calculate stats for header
  total_items = @tagged_content.sum { |group| group[:content].count }
  content_types_count = @tagged_content.size
%>

<!-- Main Container -->
<div class="min-h-screen bg-gray-50">
  
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-700 text-white overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.1"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>
    
    <!-- Content -->
    <div class="relative px-6 py-12">
      <div class="max-w-7xl mx-auto">
        
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <div class="flex items-center space-x-2 text-white/80 text-sm">
            <%= link_to "Users", users_path, class: "hover:text-white transition-colors duration-200" %>
            <i class="material-icons text-xs">chevron_right</i>
            <%= link_to @user.display_name, (@user.username.present? ? profile_by_username_path(username: @user.username) : user_path(@user)), class: "hover:text-white transition-colors duration-200" %>
            <i class="material-icons text-xs">chevron_right</i>
            <span class="text-white font-medium"><%= @tag.tag %></span>
          </div>
        </nav>
        
        <!-- Main Header -->
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
          
          <!-- Left: User & Tag Info -->
          <div class="flex items-center space-x-6 mb-6 lg:mb-0">
            
            <!-- User Avatar -->
            <div class="flex-shrink-0">
              <%= link_to (@user.username.present? ? profile_by_username_path(username: @user.username) : user_path(@user)), class: "group" do %>
                <div class="relative">
                  <% if @user.image_url.present? %>
                    <%= image_tag @user.image_url, class: "w-20 h-20 rounded-full border-4 border-white/30 group-hover:border-white/50 transition-all duration-300" %>
                  <% else %>
                    <div class="w-20 h-20 bg-white/20 rounded-full border-4 border-white/30 group-hover:border-white/50 transition-all duration-300 flex items-center justify-center">
                      <i class="material-icons text-white text-3xl">person</i>
                    </div>
                  <% end %>
                  
                  <!-- Online indicator if applicable -->
                  <% if @user.respond_to?(:online?) && @user.online? %>
                    <div class="absolute bottom-1 right-1 w-5 h-5 bg-green-400 rounded-full border-2 border-white"></div>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <!-- User & Tag Info -->
            <div>
              <div class="flex items-center space-x-3 mb-2">
                <%= link_to (@user.username.present? ? profile_by_username_path(username: @user.username) : user_path(@user)), class: "hover:underline" do %>
                  <h1 class="text-2xl font-bold text-white"><%= @user.display_name %></h1>
                <% end %>
                <% if @user.username.present? %>
                  <span class="text-white/70 text-lg">@<%= @user.username %></span>
                <% end %>
              </div>
              
              <!-- Tag Display -->
              <div class="flex items-center space-x-3">
                <div class="inline-flex items-center px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full">
                  <i class="material-icons mr-2 text-white">local_offer</i>
                  <span class="text-white font-semibold text-lg"><%= @tag.tag %></span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Right: Stats -->
          <div class="flex flex-wrap gap-4">
            <div class="bg-white/20 backdrop-blur-sm rounded-lg px-4 py-3 text-center">
              <div class="text-2xl font-bold text-white"><%= total_items %></div>
              <div class="text-white/80 text-sm">Items</div>
            </div>
            
            <div class="bg-white/20 backdrop-blur-sm rounded-lg px-4 py-3 text-center">
              <div class="text-2xl font-bold text-white"><%= content_types_count %></div>
              <div class="text-white/80 text-sm">Types</div>
            </div>
            
            <%= link_to (@user.username.present? ? profile_by_username_path(username: @user.username) : user_path(@user)), class: "bg-white/20 backdrop-blur-sm hover:bg-white/30 transition-colors duration-200 rounded-lg px-4 py-3 flex items-center space-x-2" do %>
              <i class="material-icons text-white">person</i>
              <span class="text-white font-medium">View Profile</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Content Section -->
  <div class="max-w-7xl mx-auto px-6 py-8">
    
    <% if @tagged_content.empty? %>
      
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="mx-auto w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center mb-6">
          <i class="material-icons text-gray-400 text-4xl">local_offer</i>
        </div>
        
        <h2 class="text-2xl font-bold text-gray-900 mb-2">No Content Found</h2>
        <p class="text-gray-600 max-w-md mx-auto mb-6">
          <%= @user.display_name %> hasn't tagged any public content with "<%= @tag.tag %>" or this content may have been deleted.
        </p>
        
        <%= link_to (@user.username.present? ? profile_by_username_path(username: @user.username) : user_path(@user)), class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200" do %>
          <i class="material-icons mr-2 text-sm">arrow_back</i>
          Back to Profile
        <% end %>
      </div>
      
    <% else %>
      
      <!-- Content Grid -->
      <div class="space-y-12">
        <% @tagged_content.each do |content_group| %>
          <div class="content-type-section">
            
            <!-- Section Header -->
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center space-x-3">
                <div class="p-3 <%= content_group[:color] %> bg-opacity-10 rounded-lg">
                  <i class="material-icons <%= content_group[:color].gsub('bg-', 'text-') %> text-2xl"><%= content_group[:icon] %></i>
                </div>
                <div>
                  <h2 class="text-2xl font-bold text-gray-900"><%= content_group[:type].pluralize %></h2>
                  <p class="text-gray-600"><%= pluralize(content_group[:content].count, 'item') %> tagged with "<%= @tag.tag %>"</p>
                </div>
              </div>
              
              <!-- View All Link -->
              <% 
                content_type = content_group[:type]
                if content_type == "Document"
                  content_type_path = (@user.username.present? ? profile_by_username_path(username: @user.username) : user_path(@user))
                elsif content_type == "Timeline"
                  content_type_path = nil
                else
                  content_type_path = send("#{content_type.downcase.pluralize}_user_path", id: @user.id) rescue nil
                end
              %>
              <% if content_type_path %>
                <%= link_to content_type_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900 font-medium transition-colors duration-200" do %>
                  <span>View all <%= content_group[:type].downcase.pluralize %></span>
                  <i class="material-icons ml-1 text-sm">arrow_forward</i>
                <% end %>
              <% end %>
            </div>
            
            <!-- Content Cards Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
              <% content_group[:content].each do |content| %>
                <div class="content-card group">
                  
                  <!-- Card Container -->
                  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
                    
                    <!-- Card Image -->
                    <div class="relative h-48 overflow-hidden">
                      <% 
                        # Find image for content
                        content_image = @random_image_including_private_pool_cache.fetch([content.class.name, content.id], [])
                          .sample
                          .try(:src, :medium)

                        if @saved_basil_commissions
                          content_image ||= @saved_basil_commissions.fetch([content.class.name, content.id], [])
                            .sample
                            .try(:image)
                            .try(:url)
                        end

                        content_image ||= asset_path("card-headers/#{content.class.name.downcase.pluralize}.jpg")
                      %>
                      
                      <div class="w-full h-full bg-cover bg-center group-hover:scale-105 transition-transform duration-300" 
                           style="background-image: url('<%= content_image %>');">
                      </div>
                      
                      <!-- Gradient Overlay -->
                      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
                      
                      <!-- Content Title -->
                      <div class="absolute bottom-4 left-4 right-4">
                        <% content_name = content.respond_to?(:name) ? content.name : content.title %>
                        <h3 class="text-white font-bold text-lg line-clamp-2 mb-1">
                          <%= content_name.presence || 'Untitled' %>
                        </h3>
                        
                        <!-- Main Tag Badge -->
                        <div class="flex items-center">
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            <i class="material-icons text-xs mr-1">local_offer</i>
                            <%= @tag.tag %>
                          </span>
                        </div>
                      </div>
                    </div>
                    
                    <!-- Card Content -->
                    <div class="p-4">
                      
                      <!-- Description -->
                      <% content_description = content.try(:description) || content.try(:synopsis) %>
                      <% if content_description.present? %>
                        <p class="text-gray-600 text-sm line-clamp-3 mb-3">
                          <%= sanitize ContentFormatterService.show(text: truncate(content_description, length: 120, escape: false), viewing_user: current_user) %>
                        </p>
                      <% end %>
                      
                      <!-- Tags -->
                      <% if content.respond_to?(:page_tags) && content.page_tags.any? %>
                        <div class="flex flex-wrap gap-1 mb-3">
                          <% content.page_tags.limit(3).each do |tag| %>
                            <% if tag.tag == @tag.tag %>
                              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                <%= tag.tag %>
                              </span>
                            <% else %>
                              <%= link_to (content.user.username.present? ? user_tag_path(username: content.user.username, tag_slug: tag.slug) : user_id_tag_path(id: content.user.id, tag_slug: tag.slug)), class: "inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors duration-200" do %>
                                <%= tag.tag %>
                              <% end %>
                            <% end %>
                          <% end %>
                          <% if content.page_tags.count > 3 %>
                            <span class="text-xs text-gray-400">+<%= content.page_tags.count - 3 %> more</span>
                          <% end %>
                        </div>
                      <% end %>
                      
                      <!-- Footer -->
                      <div class="flex items-center justify-between text-xs text-gray-500">
                        <span class="flex items-center">
                          <i class="material-icons text-xs mr-1">schedule</i>
                          <%= content.created_at == content.updated_at ? 'Created' : 'Updated' %>
                          <%= time_ago_in_words(content.updated_at) %> ago
                        </span>
                        
                        <% if user_signed_in? %>
                          <%= link_to content, class: "inline-flex items-center text-blue-600 hover:text-blue-700 font-medium transition-colors duration-200" do %>
                            <span>View</span>
                            <i class="material-icons ml-1 text-sm">arrow_forward</i>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
    <% end %>
  </div>
</div>

<!-- Custom Styles -->
<style>
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Dynamic color classes for content types */
<% @tagged_content.each do |content_group| %>
  <% color_base = content_group[:color].gsub('bg-', '') rescue 'blue' %>
  .text-<%= color_base %>-600 { color: rgb(37 99 235); }
  .bg-<%= color_base %>-50 { background-color: rgb(239 246 255); }
  .bg-<%= color_base %>-100 { background-color: rgb(219 234 254); }
<% end %>
</style>